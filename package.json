{
  "name": "autorev",
  "version": "1.0.0",
  "description": "AutoRev - Find What Drives You. Sports car advisory, upgrade planning, and performance guidance.",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:css": "stylelint \"**/*.css\" --ignore-path .gitignore",
    "lint:css:fix": "stylelint \"**/*.css\" --fix --ignore-path .gitignore",
    "audit:css": "node scripts/audit-css-tokens.mjs",
    "audit:css:json": "node scripts/audit-css-tokens.mjs --json",
    "fix:colors": "node scripts/fix-hardcoded-colors.mjs",
    "fix:colors:all": "node scripts/fix-hardcoded-colors.mjs --all",
    "fix:colors:dry": "node scripts/fix-hardcoded-colors.mjs --all --dry-run",
    "audit:media-queries": "node scripts/audit-media-queries.mjs",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "node --test \"lib/**/*.test.js\" \"scripts/**/*.test.js\"",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "test:integration": "node --test \"tests/integration/**/*.test.js\"",
    "test:all": "npm run test:unit && npm test && npm run test:integration",
    "test:e2e": "playwright test",
    "test:mobile": "playwright test tests/mobile-viewport.spec.js",
    "test:mobile:samsung": "playwright test tests/mobile-viewport.spec.js --grep 'Samsung'",
    "mobile:audit": "MOBILE_AUDIT=1 playwright test tests/e2e/mobile-audit.screenshots.spec.js",
    "seed": "node scripts/migrate-and-seed.js",
    "gen:seed-multi-brand-migration": "node scripts/generateSeedMultiBrandMigration.mjs",
    "test:gen:seed-multi-brand-migration": "node scripts/testGenerateSeedMultiBrandMigration.mjs",
    "smoke:parts-search-api": "node scripts/smokePartsSearchApi.mjs",
    "al:eval": "node scripts/al-eval-regression-tests.mjs",
    "al:eval:spot": "node scripts/run-al-eval.mjs --count=10",
    "al:eval:full": "node scripts/run-al-eval.mjs --full",
    "youtube:pipeline": "node scripts/youtube-pipeline.js",
    "youtube:discover": "node scripts/youtube-discovery.js",
    "youtube:transcripts": "node scripts/youtube-transcripts.js",
    "youtube:ai": "node scripts/youtube-ai-processing.js",
    "youtube:consensus": "node scripts/youtube-aggregate-consensus.js",
    "youtube:curated": "node scripts/youtube-browser-discovery.js",
    "audit:events:mece": "node scripts/audit-events-mece.js",
    "audit:events:urls": "node scripts/validate-event-urls.js",
    "audit:events:quality": "node scripts/audit-events-quality.js",
    "audit:events": "node scripts/audit-events-all.js",
    "seed:events:major": "node scripts/events/seed-major-events-2026.js",
    "seed:events:cc": "node scripts/events/seed-cars-and-coffee.js",
    "seed:events:auctions": "node scripts/events/seed-auctions-2026.js",
    "seed:events:industry": "node scripts/events/seeders/seed-industry-events.js",
    "seed:events:timeattack": "node scripts/events/seeders/seed-time-attack.js",
    "seed:events:shows": "node scripts/events/seeders/seed-car-shows.js",
    "seed:events:clubs": "node scripts/events/seeders/seed-club-events.js",
    "seed:events:cc-expand": "node scripts/events/seeders/seed-cc-expansion.js",
    "seed:events:trackdays": "node scripts/events/seeders/seed-track-days.js",
    "seed:events:autocross": "node scripts/events/seeders/seed-autocross.js",
    "seed:events:all": "node scripts/events/run-all-seeds.js",
    "analyze:events:coverage": "node scripts/events/analysis/coverage-analysis.js",
    "apify:reddit": "node scripts/apify/backfill-reddit-insights.mjs",
    "apify:reddit:tier1": "node scripts/apify/backfill-reddit-insights.mjs --tier=1",
    "apify:reddit:priority": "node scripts/apify/backfill-reddit-insights.mjs --limit=20",
    "apify:bat": "node scripts/apify/backfill-bat-pricing.mjs",
    "scrape:events:cc": "node scripts/events/scrapers/carsandcoffee-directory.js",
    "scrape:events:msr": "node scripts/events/scrapers/motorsportreg-scraper.js",
    "msr:client": "node scripts/events/scrapers/motorsportreg-client.js",
    "gen:icons": "node scripts/generate-icons.mjs",
    "prepare": "husky"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@sentry/nextjs": "^10.36.0",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.86.2",
    "@tanstack/react-query": "^5.90.12",
    "@vercel/analytics": "^1.6.1",
    "@vercel/blob": "^2.0.0",
    "@vercel/speed-insights": "^1.3.1",
    "apify-client": "^2.21.0",
    "cheerio": "^1.1.2",
    "dotenv": "^16.4.5",
    "exa-js": "^2.0.12",
    "html2canvas": "^1.4.1",
    "next": "14.2.35",
    "next-themes": "^0.4.6",
    "openai": "^6.10.0",
    "posthog-js": "^1.335.0",
    "puppeteer": "^24.32.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "resend": "^6.5.2",
    "sharp": "^0.34.5",
    "stripe": "^14.11.0",
    "youtube-transcript": "^1.2.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "critters": "^0.0.23",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.35",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "image-size": "^2.0.2",
    "jsdom": "^25.0.1",
    "lint-staged": "^16.2.7",
    "pg": "^8.16.3",
    "prettier": "^3.8.1",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^36.0.1",
    "tinify": "^1.8.2",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix --max-warnings=0"
    ],
    "*.css": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
