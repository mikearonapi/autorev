/* ===========================================
   POWER LIMITS ADVISORY
   Standalone component for Data tab
   =========================================== */

.powerLimits {
  background: linear-gradient(135deg, rgba(245, 158, 11, 0.08) 0%, rgba(245, 158, 11, 0.02) 100%);
  border: 1px solid rgba(245, 158, 11, 0.2);
  border-radius: 16px;
  padding: 20px;
}

.powerLimitsHeader {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 16px;
}

.powerLimitsHeader svg {
  color: var(--brand-warning);
}

.powerLimitsHeader span:first-of-type {
  font-size: 14px;
  font-weight: 600;
  color: var(--brand-text-primary);
  flex: 1;
}

.powerLimitsDisclaimer {
  font-size: 10px;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.4);
  padding: 3px 8px;
  background: rgba(255, 255, 255, 0.06);
  border-radius: 4px;
}

.powerLimitsList {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.powerLimitItem {
  display: grid;
  grid-template-columns: 140px 1fr 80px;
  align-items: center;
  gap: 12px;
  padding: 8px 0;
}

.powerLimitLabel {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.7);
}

.powerLimitBar {
  height: 8px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 4px;
  overflow: hidden;
}

.powerLimitFill {
  height: 100%;
  background: linear-gradient(90deg, var(--brand-teal) 0%, #f59e0b 70%, #ef4444 100%);
  border-radius: 4px;
  transition: width 0.3s ease;
}

.powerLimitValue {
  font-size: 12px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.6);
  text-align: right;
  display: flex;
  align-items: center;
  gap: 6px;
  justify-content: flex-end;
}

.powerLimitItem.atRisk .powerLimitLabel {
  color: var(--brand-warning);
}

.powerLimitItem.atRisk .powerLimitValue {
  color: var(--brand-warning);
}

.powerLimitItem.overLimit .powerLimitLabel {
  color: var(--brand-error);
  font-weight: 600;
}

.powerLimitItem.overLimit .powerLimitValue {
  color: var(--brand-error);
}

.powerLimitItem.overLimit .powerLimitValue svg {
  color: var(--brand-error);
}

.powerLimitsFooter {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-top: 16px;
  padding: 10px 14px;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 8px;
  font-size: 11px;
  color: rgba(255, 255, 255, 0.45);
  line-height: 1.4;
}

.powerLimitsFooter svg {
  flex-shrink: 0;
  color: rgba(255, 255, 255, 0.3);
}

/* Responsive */
@media (max-width: 600px) {
  .powerLimits {
    padding: 14px;
  }
  
  .powerLimitItem {
    grid-template-columns: 100px 1fr 60px;
    gap: 8px;
  }
  
  .powerLimitLabel {
    font-size: 11px;
  }
  
  .powerLimitValue {
    font-size: 11px;
  }
}
