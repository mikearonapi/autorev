/**
 * Auth Loading Screen Styles
 * 
 * Full-screen overlay with progress indicators
 * for post-authentication data loading.
 */

/* Overlay - covers entire screen */
.overlay {
  position: fixed;
  inset: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(
    135deg,
    var(--background-primary, var(--brand-bg-primary-dark)) 0%,
    var(--background-secondary, #1a1a1a) 50%,
    var(--background-primary, var(--brand-bg-primary-dark)) 100%
  );
  animation: fadeIn 0.3s ease-out;
}

.overlay.exiting {
  animation: fadeOut 0.4s ease-out forwards;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes fadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}

/* Close button */
.closeButton {
  position: absolute;
  top: 1.5rem;
  right: 1.5rem;
  width: 44px;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  color: var(--text-secondary, var(--brand-text-secondary));
  cursor: pointer;
  transition: all 0.2s ease;
  z-index: 10;
}

.closeButton:hover {
  background: rgba(255, 255, 255, 0.1);
  color: var(--text-primary, var(--brand-text-primary));
  border-color: rgba(255, 255, 255, 0.2);
}

.closeButton:active {
  transform: scale(0.95);
}

/* Container for content */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 2rem;
  max-width: 400px;
  width: 100%;
  text-align: center;
}

/* Avatar / Mascot */
.avatarWrapper {
  margin-bottom: 1.5rem;
  animation: pulse 2s ease-in-out infinite;
}

.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  border: 3px solid var(--accent-primary, var(--brand-error));
  box-shadow: 0 0 20px rgba(239, 68, 68, 0.4);
  object-fit: cover;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.05);
    opacity: 0.9;
  }
}

/* Title */
.title {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--text-primary, var(--brand-text-primary));
  margin: 0 0 0.5rem;
  letter-spacing: -0.02em;
}

.subtitle {
  font-size: 0.9375rem;
  color: var(--text-secondary, var(--brand-text-secondary));
  margin: 0 0 2rem;
}

/* Progress bar */
.progressBarContainer {
  width: 100%;
  height: 4px;
  background: var(--border-subtle, var(--brand-border-default));
  border-radius: 2px;
  overflow: hidden;
  margin-bottom: 2rem;
}

.progressBar {
  height: 100%;
  background: linear-gradient(
    90deg,
    var(--accent-primary, var(--brand-error)) 0%,
    var(--accent-secondary, var(--brand-warning)) 100%
  );
  border-radius: 2px;
  transition: width 0.3s ease-out;
  box-shadow: 0 0 10px rgba(239, 68, 68, 0.5);
}

/* Loading steps */
.steps {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
  width: 100%;
  margin-bottom: 1.5rem;
}

.step {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.75rem 1rem;
  background: var(--surface-secondary, #1a1a1a);
  border: 1px solid var(--border-subtle, var(--brand-border-default));
  border-radius: 8px;
  opacity: 0;
  transform: translateY(10px);
  animation: stepIn 0.3s ease-out forwards;
}

@keyframes stepIn {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.step.stepComplete {
  border-color: rgba(34, 197, 94, 0.3);
  background: rgba(34, 197, 94, 0.05);
}

.step.stepLoading {
  border-color: rgba(239, 68, 68, 0.3);
  background: rgba(239, 68, 68, 0.05);
}

.step.stepFailed {
  border-color: rgba(239, 68, 68, 0.5);
  background: rgba(239, 68, 68, 0.1);
}

.step.stepPending {
  opacity: 0.6;
}

/* Step icon container */
.stepIcon {
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

/* Step content (label + error) */
.stepContent {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 0.25rem;
}

/* Pending dot */
.pendingDot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: var(--text-tertiary, #666666);
}

.stepEmoji {
  font-size: 1rem;
  opacity: 0.5;
}

.checkIcon {
  width: 18px;
  height: 18px;
  color: var(--brand-success);
  animation: checkIn 0.3s ease-out;
}

@keyframes checkIn {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* Spinner */
.spinner {
  width: 18px;
  height: 18px;
  animation: spin 1s linear infinite;
}

.spinner svg {
  width: 100%;
  height: 100%;
  color: var(--accent-primary, var(--brand-error));
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* Step label */
.stepLabel {
  font-size: 0.875rem;
  color: var(--text-secondary, var(--brand-text-secondary));
  transition: color 0.2s ease;
}

.stepComplete .stepLabel {
  color: var(--text-primary, var(--brand-text-primary));
}

.stepLoading .stepLabel {
  color: var(--text-primary, var(--brand-text-primary));
}

.stepFailed .stepLabel {
  color: var(--accent-primary, var(--brand-error));
}

/* Step error message */
.stepError {
  font-size: 0.75rem;
  color: rgba(239, 68, 68, 0.8);
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* Error icon */
.errorIcon {
  width: 18px;
  height: 18px;
  color: var(--brand-error);
  animation: errorShake 0.5s ease-out;
}

@keyframes errorShake {
  0%, 100% { transform: translateX(0); }
  20% { transform: translateX(-2px); }
  40% { transform: translateX(2px); }
  60% { transform: translateX(-2px); }
  80% { transform: translateX(2px); }
}

/* Retry button */
.retryButton {
  display: flex;
  align-items: center;
  gap: 0.375rem;
  padding: 0.375rem 0.625rem;
  background: rgba(239, 68, 68, 0.1);
  border: 1px solid rgba(239, 68, 68, 0.3);
  border-radius: 6px;
  color: var(--accent-primary, var(--brand-error));
  font-size: 0.75rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.retryButton:hover {
  background: rgba(239, 68, 68, 0.2);
  border-color: rgba(239, 68, 68, 0.5);
}

.retryButton:active {
  transform: scale(0.95);
}

.retryIcon {
  width: 14px;
  height: 14px;
}

/* Progress text */
.progressText {
  font-size: 0.75rem;
  color: var(--text-tertiary, #666666);
  font-variant-numeric: tabular-nums;
}

.failedText {
  color: var(--accent-primary, var(--brand-error));
}

.successText {
  color: var(--brand-success);
}

/* Responsive adjustments */
@media (max-width: 480px) {
  .container {
    padding: 1.5rem;
  }
  
  .title {
    font-size: 1.25rem;
  }
  
  .step {
    padding: 0.625rem 0.875rem;
  }
}

