/* VideoPlayer Component Styles */

.overlay {
  position: fixed;
  inset: 0;
  z-index: 9999;
  background: rgba(0, 0, 0, 0.95);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 1rem;
}

.playerContainer {
  position: relative;
  width: 100%;
  max-width: 1200px;
  max-height: 90vh;
  background: var(--brand-bg-primary);
  border-radius: 8px;
  overflow: hidden;
  aspect-ratio: 16 / 9;
}

.video {
  width: 100%;
  height: 100%;
  object-fit: contain;
  cursor: pointer;
}

/* Close Button */
.closeBtn {
  position: absolute;
  top: 1rem;
  right: 1rem;
  z-index: 10;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.6);
  border: none;
  border-radius: 50%;
  color: white;
  cursor: pointer;
  transition: background 0.2s, transform 0.2s;
}

.closeBtn:hover {
  background: rgba(233, 69, 96, 0.9);
  transform: scale(1.1);
}

/* Loading Overlay */
.loadingOverlay {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.5);
}

.spinner {
  width: 48px;
  height: 48px;
  border: 3px solid rgba(255, 255, 255, 0.2);
  border-top-color: var(--brand-error);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* Error Overlay */
.errorOverlay {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.8);
  color: var(--brand-error-light);
  font-size: 1rem;
}

/* Big Play Button */
.bigPlayBtn {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80px;
  height: 80px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(233, 69, 96, 0.9);
  border: none;
  border-radius: 50%;
  cursor: pointer;
  transition: transform 0.2s, background 0.2s;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
}

.bigPlayBtn:hover {
  transform: translate(-50%, -50%) scale(1.1);
  background: rgba(233, 69, 96, 1);
}

.bigPlayBtn svg {
  margin-left: 4px; /* Optical center for play icon */
}

/* Controls Bar */
.controls {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 0.5rem 1rem 1rem;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.9) 0%, transparent 100%);
  transition: opacity 0.3s;
}

.hideControls .controls {
  opacity: 0;
  pointer-events: none;
}

.hideControls .closeBtn {
  opacity: 0;
}

/* Progress Bar */
.progressBar {
  padding: 0.5rem 0;
  cursor: pointer;
  margin-bottom: 0.5rem;
}

.progressTrack {
  height: 4px;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 2px;
  overflow: hidden;
  transition: height 0.2s;
}

.progressBar:hover .progressTrack {
  height: 6px;
}

.progressFill {
  height: 100%;
  background: var(--brand-error);
  border-radius: 2px;
  transition: width 0.1s linear;
}

/* Controls Row */
.controlsRow {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.controlBtn {
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  border: none;
  color: white;
  cursor: pointer;
  border-radius: 4px;
  transition: background 0.2s;
}

.controlBtn:hover {
  background: rgba(255, 255, 255, 0.1);
}

/* Time Display */
.time {
  color: rgba(255, 255, 255, 0.9);
  font-size: 0.875rem;
  font-variant-numeric: tabular-nums;
  white-space: nowrap;
}

.spacer {
  flex: 1;
}

/* Volume Slider */
.volumeSlider {
  width: 80px;
  height: 4px;
  -webkit-appearance: none;
  appearance: none;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 2px;
  outline: none;
  cursor: pointer;
}

.volumeSlider::-webkit-slider-thumb {
  -webkit-appearance: none;
  appearance: none;
  width: 12px;
  height: 12px;
  background: white;
  border-radius: 50%;
  cursor: pointer;
  transition: transform 0.2s;
}

.volumeSlider::-webkit-slider-thumb:hover {
  transform: scale(1.2);
}

.volumeSlider::-moz-range-thumb {
  width: 12px;
  height: 12px;
  background: white;
  border: none;
  border-radius: 50%;
  cursor: pointer;
}

/* Caption */
.caption {
  position: absolute;
  bottom: 80px;
  left: 50%;
  transform: translateX(-50%);
  padding: 0.5rem 1rem;
  background: rgba(0, 0, 0, 0.75);
  color: white;
  font-size: 0.875rem;
  border-radius: 4px;
  max-width: 80%;
  text-align: center;
}

/* Responsive */
@media (max-width: 768px) {
  .overlay {
    padding: 0;
  }
  
  .playerContainer {
    max-width: 100%;
    max-height: 100vh;
    border-radius: 0;
  }
  
  .closeBtn {
    top: 0.5rem;
    right: 0.5rem;
    width: 36px;
    height: 36px;
  }
  
  .bigPlayBtn {
    width: 64px;
    height: 64px;
  }
  
  .bigPlayBtn svg {
    width: 48px;
    height: 48px;
  }
  
  .controls {
    padding: 0.25rem 0.75rem 0.75rem;
  }
  
  .controlsRow {
    gap: 0.5rem;
  }
  
  .controlBtn {
    width: 32px;
    height: 32px;
  }
  
  .volumeSlider {
    width: 60px;
  }
  
  .time {
    font-size: 0.75rem;
  }
  
  .caption {
    bottom: 70px;
    font-size: 0.75rem;
  }
}

/* Fullscreen adjustments */
:fullscreen .playerContainer {
  max-width: 100%;
  max-height: 100%;
  border-radius: 0;
}
