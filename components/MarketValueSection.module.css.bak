/**
 * Market Value Section Styles
 */

.section {
  background: var(--bg-secondary, #1a1a1a);
  border: 1px solid var(--border-color, #333);
  border-radius: 12px;
  padding: 1.25rem;
}

.sectionHeader {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-bottom: 1rem;
}

.sectionHeader svg {
  color: var(--sn-accent, #c4a564);
}

.sectionHeader h4 {
  font-size: 1rem;
  font-weight: 600;
  margin: 0;
  color: var(--text-primary, var(--brand-text-primary));
  flex: 1;
}

/* Trend Badge */
.trendBadge {
  display: inline-flex;
  align-items: center;
  gap: 0.25rem;
  padding: 0.2rem 0.5rem;
  border-radius: 999px;
  font-size: 0.7rem;
  font-weight: 600;
  text-transform: capitalize;
}

.trendUp {
  background: rgba(16, 185, 129, 0.15);
  color: var(--brand-teal);
}

.trendDown {
  background: rgba(239, 68, 68, 0.15);
  color: var(--brand-error);
}

.trendStable {
  background: rgba(107, 114, 128, 0.15);
  color: #9ca3af;
}

/* Loading/Empty States */
.loadingState,
.emptyState {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 1.5rem;
  text-align: center;
  color: var(--text-muted, #888);
  gap: 0.5rem;
}

.spinner {
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.emptyState p {
  margin: 0;
  font-size: 0.9rem;
}

.emptyHint {
  font-size: 0.75rem;
  opacity: 0.7;
}

/* Error State */
.errorState {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.75rem;
  padding: 1.5rem;
  background: rgba(220, 53, 69, 0.1);
  border: 1px solid rgba(220, 53, 69, 0.3);
  border-radius: 8px;
  color: var(--text-muted, #888);
}

.errorState svg {
  color: #dc3545;
  flex-shrink: 0;
}

.retryButton {
  background: var(--sn-accent, #c4a564);
  color: var(--brand-bg-primary);
  border: none;
  padding: 0.4rem 0.75rem;
  border-radius: 4px;
  font-size: 0.8rem;
  font-weight: 500;
  cursor: pointer;
  transition: background-color 0.2s, transform 0.1s;
}

.retryButton:hover {
  background: var(--brand-gold);
  transform: scale(1.02);
}

.retryButton:active {
  transform: scale(0.98);
}

/* Consensus Price */
.consensusPrice {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 1rem;
  background: rgba(255, 77, 0, 0.1);
  border: 1px solid rgba(255, 77, 0, 0.2);
  border-radius: 8px;
  margin-bottom: 1rem;
  text-align: center;
}

.consensusLabel {
  font-size: 0.75rem;
  color: var(--text-muted, #888);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: 0.25rem;
}

.consensusValue {
  font-size: 1.75rem;
  font-weight: 700;
  color: var(--sn-accent, #c4a564);
  line-height: 1;
}

.confidenceBadge {
  margin-top: 0.5rem;
  font-size: 0.7rem;
  color: var(--text-muted, #888);
  text-transform: capitalize;
}

/* Sources Grid */
.sourcesGrid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 0.75rem;
  margin-bottom: 1rem;
}

.sourceCard {
  background: var(--bg-tertiary, #252525);
  border: 1px solid var(--border-color, #333);
  border-radius: 8px;
  padding: 0.75rem;
}

.sourceHeader {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 0.5rem;
  padding-bottom: 0.5rem;
  border-bottom: 1px solid var(--border-color, #333);
}

.sourceName {
  font-size: 0.8rem;
  font-weight: 600;
  color: var(--text-primary, var(--brand-text-primary));
}

.sourceType {
  font-size: 0.65rem;
  color: var(--text-muted, #888);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.sourceStats {
  display: flex;
  flex-direction: column;
  gap: 0.35rem;
}

.sourceStat {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sourceStatLabel {
  font-size: 0.75rem;
  color: var(--text-muted, #888);
}

.sourceStatValue {
  font-size: 0.8rem;
  font-weight: 600;
  color: var(--text-primary, var(--brand-text-primary));
}

.sourceFooter {
  margin-top: 0.5rem;
  padding-top: 0.5rem;
  border-top: 1px solid var(--border-color, #333);
}

.trendIndicator {
  font-size: 0.75rem;
  font-weight: 600;
}

/* Disclaimer */
.disclaimer {
  display: flex;
  align-items: flex-start;
  gap: 0.35rem;
  font-size: 0.7rem;
  color: var(--text-muted, #888);
  margin: 0;
  line-height: 1.4;
}

.disclaimer svg {
  flex-shrink: 0;
  margin-top: 2px;
}

/* Price History */
.priceHistorySection {
  margin-top: 1rem;
  padding-top: 1rem;
  border-top: 1px solid var(--border-color, #333);
}

.historyTitle {
  display: flex;
  align-items: center;
  gap: 0.35rem;
  font-size: 0.8rem;
  font-weight: 600;
  margin: 0 0 0.75rem;
  color: var(--text-primary, var(--brand-text-primary));
}

.historyTitle svg {
  color: var(--sn-accent, #c4a564);
}

.historyList {
  display: flex;
  gap: 0.5rem;
  overflow-x: auto;
  padding-bottom: 0.25rem;
}

.historyPoint {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0.5rem 0.75rem;
  background: var(--bg-tertiary, #252525);
  border: 1px solid var(--border-color, #333);
  border-radius: 6px;
  min-width: 70px;
}

.historyDate {
  font-size: 0.65rem;
  color: var(--text-muted, #888);
  margin-bottom: 0.25rem;
}

.historyPrice {
  font-size: 0.8rem;
  font-weight: 600;
  color: var(--text-primary, var(--brand-text-primary));
}

/* Responsive */
@media (max-width: 640px) {
  .sourcesGrid {
    grid-template-columns: 1fr;
  }
  
  .consensusValue {
    font-size: 1.5rem;
  }
}














