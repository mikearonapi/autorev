/* AuthModal - Clean, Minimal Design */

/* Overlay */
.overlay {
  position: fixed;
  inset: 0;
  z-index: 1100;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--space-md);
  background: transparent;
  animation: fadeIn 0.2s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* Modal */
.modal {
  position: relative;
  width: 100%;
  max-width: 380px;
  background: var(--color-white);
  border-radius: var(--radius-lg);
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
  padding: var(--space-xl) var(--space-lg);
  animation: slideUp 0.25s ease;
}

@media (max-width: 480px) {
  .overlay {
    align-items: center;
    justify-content: center;
    padding: var(--space-md);
  }
  
  .modal {
    max-width: calc(100% - var(--space-lg));
    border-radius: var(--radius-xl);
    padding: var(--space-xl) var(--space-lg);
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(16px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Close Button */
.closeBtn {
  position: absolute;
  top: var(--space-md);
  right: var(--space-md);
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  border: none;
  border-radius: var(--radius-full);
  color: var(--color-gray-400);
  cursor: pointer;
  transition: all 0.15s ease;
}

.closeBtn:hover {
  background: var(--color-gray-100);
  color: var(--color-gray-600);
}

/* Back Button */
.backBtn {
  position: absolute;
  top: var(--space-md);
  left: var(--space-md);
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  border: none;
  border-radius: var(--radius-full);
  color: var(--color-gray-400);
  cursor: pointer;
  transition: all 0.15s ease;
}

.backBtn:hover {
  background: var(--color-gray-100);
  color: var(--color-gray-600);
}

/* Title */
.title {
  font-family: var(--font-body);
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--color-gray-900);
  text-align: center;
  margin: 0 0 var(--space-md);
}

/* Info Box */
.infoBox {
  position: relative;
  background: var(--color-gray-50);
  border: 1px solid var(--color-gray-200);
  border-radius: var(--radius-md);
  padding: var(--space-sm) var(--space-md);
  font-size: var(--font-size-sm);
  color: var(--color-gray-600);
  line-height: 1.5;
  margin-bottom: var(--space-md);
}

.forgotInline {
  position: absolute;
  top: var(--space-sm);
  right: var(--space-md);
  background: none;
  border: none;
  font-size: var(--font-size-sm);
  color: var(--sn-primary);
  cursor: pointer;
  padding: 0;
}

.forgotInline:hover {
  text-decoration: underline;
}

/* Error Box */
.errorBox {
  display: flex;
  align-items: flex-start;
  gap: var(--space-sm);
  background: var(--color-error-light);
  border: 1px solid var(--color-error);
  border-radius: var(--radius-md);
  padding: var(--space-sm) var(--space-md);
  font-size: var(--font-size-sm);
  color: var(--color-error);
  margin-bottom: var(--space-md);
  line-height: 1.4;
}

.errorBox svg {
  flex-shrink: 0;
  margin-top: 2px;
}

/* Form */
.form {
  display: flex;
  flex-direction: column;
  gap: var(--space-sm);
}

/* Input Group */
.inputGroup {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.inputGroup input {
  width: 100%;
  height: 48px;
  padding: 0 var(--space-md);
  font-size: var(--font-size-sm);
  border: 1px solid var(--color-gray-300);
  border-radius: var(--radius-md);
  background: var(--color-white);
  color: var(--color-gray-800);
  transition: border-color 0.15s ease, box-shadow 0.15s ease;
}

.inputGroup input:focus {
  outline: none;
  border-color: var(--sn-primary);
  box-shadow: 0 0 0 3px rgba(26, 77, 110, 0.1);
}

.inputGroup input::placeholder {
  color: var(--color-gray-400);
}

.inputGroup input:disabled {
  background: var(--color-gray-50);
  cursor: not-allowed;
}

/* Password Wrapper */
.passwordWrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.passwordWrapper input {
  padding-right: 60px;
}

.showBtn {
  position: absolute;
  right: var(--space-sm);
  background: none;
  border: none;
  font-size: var(--font-size-sm);
  color: var(--color-gray-500);
  cursor: pointer;
  padding: var(--space-xs) var(--space-sm);
}

.showBtn:hover {
  color: var(--color-gray-700);
}

/* Field Error */
.fieldError {
  font-size: var(--font-size-xs);
  color: var(--color-error);
}

/* Password Strength */
.strengthRow {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
  margin-top: 4px;
}

.strengthBars {
  display: flex;
  gap: 4px;
  flex: 1;
}

.strengthBar {
  height: 3px;
  flex: 1;
  border-radius: 2px;
  background: var(--color-gray-200);
  transition: background-color 0.2s ease;
}

.strengthRow > span {
  font-size: var(--font-size-xs);
  font-weight: 500;
  min-width: 40px;
  text-align: right;
}

/* Primary Button */
.primaryBtn {
  width: 100%;
  height: 48px;
  background: var(--sn-primary);
  color: var(--color-white);
  border: none;
  border-radius: var(--radius-md);
  font-size: var(--font-size-sm);
  font-weight: 600;
  cursor: pointer;
  transition: background-color 0.15s ease;
  margin-top: var(--space-sm);
}

.primaryBtn:hover:not(:disabled) {
  background: var(--sn-primary-dark);
}

.primaryBtn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

/* Switch Mode */
.switchMode {
  text-align: center;
  font-size: var(--font-size-sm);
  color: var(--color-gray-500);
  margin: var(--space-md) 0 0;
}

.switchMode button {
  background: none;
  border: none;
  color: var(--sn-primary);
  font-weight: 600;
  cursor: pointer;
  padding: 0;
}

.switchMode button:hover {
  text-decoration: underline;
}

/* Divider */
.divider {
  display: flex;
  align-items: center;
  gap: var(--space-md);
  margin: var(--space-lg) 0 var(--space-md);
}

.divider::before,
.divider::after {
  content: '';
  flex: 1;
  height: 1px;
  background: var(--color-gray-200);
}

.divider span {
  font-size: var(--font-size-xs);
  color: var(--color-gray-400);
  white-space: nowrap;
}

/* Social Buttons Row */
.socialRow {
  display: flex;
  justify-content: center;
  gap: var(--space-sm);
}

.socialBtn {
  width: 56px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--color-white);
  border: 1px solid var(--color-gray-300);
  border-radius: var(--radius-md);
  cursor: pointer;
  transition: all 0.15s ease;
}

.socialBtn:hover:not(:disabled) {
  background: var(--color-gray-50);
  border-color: var(--color-gray-400);
}

.socialBtn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* Social Button Wrapper (for Coming Soon label) */
.socialBtnWrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
}

/* Disabled Facebook button - greyed out */
.socialBtnDisabled {
  opacity: 0.4;
  cursor: not-allowed;
  pointer-events: none;
}

.socialBtnDisabled svg {
  filter: grayscale(100%);
}

/* Coming Soon label */
.comingSoon {
  font-size: 10px;
  color: var(--color-gray-400);
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Success View */
.successView {
  text-align: center;
  padding: var(--space-md) 0;
}

.successIcon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 72px;
  height: 72px;
  background: var(--color-success-light);
  border-radius: var(--radius-full);
  color: var(--color-success);
  margin-bottom: var(--space-lg);
}

.successView .title {
  margin-bottom: var(--space-sm);
}

.successView .subtitle {
  font-size: var(--font-size-sm);
  color: var(--color-gray-600);
  margin: 0 0 var(--space-sm);
  line-height: 1.5;
}

.helpText {
  font-size: var(--font-size-sm);
  color: var(--color-gray-400);
  margin-bottom: var(--space-lg);
}

/* Mobile touch optimizations */
@media (hover: none) and (pointer: coarse) {
  .primaryBtn:active {
    transform: scale(0.98);
  }
  
  .socialBtn:active {
    transform: scale(0.95);
  }
}
