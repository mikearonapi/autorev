/* ===========================================
   POWER BREAKDOWN
   Standalone component for Data tab
   Shows where HP gains come from
   =========================================== */

.powerBreakdown {
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.08);
  border-radius: 16px;
  padding: 20px;
}

.breakdownHeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.breakdownTitle {
  font-size: 14px;
  font-weight: 600;
  color: var(--brand-text-primary);
}

.breakdownTotal {
  font-size: 16px;
  font-weight: 700;
  color: var(--color-accent-teal);
}

.breakdownBars {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.breakdownRow {
  display: grid;
  grid-template-columns: 120px 1fr 50px;
  align-items: center;
  gap: 12px;
}

.breakdownLabel {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 12px;
  color: rgba(255, 255, 255, 0.7);
}

.breakdownDot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  flex-shrink: 0;
}

.breakdownBarContainer {
  height: 8px;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 4px;
  overflow: hidden;
}

.breakdownBar {
  height: 100%;
  border-radius: 4px;
  transition: width 0.3s ease;
}

.breakdownGain {
  font-size: 12px;
  font-weight: 600;
  color: var(--color-accent-teal);
  text-align: right;
}

/* Empty state */
.breakdownEmpty {
  text-align: center;
  padding: 20px;
  color: rgba(255, 255, 255, 0.4);
  font-size: 13px;
}

.breakdownEmptyHint {
  font-size: 11px;
  color: rgba(255, 255, 255, 0.3);
  margin-top: 4px;
}

/* Responsive */
@media (max-width: 600px) {
  .powerBreakdown {
    padding: 16px;
  }

  .breakdownRow {
    grid-template-columns: 100px 1fr 40px;
    gap: 8px;
  }
  
  .breakdownLabel {
    font-size: 11px;
  }
}
