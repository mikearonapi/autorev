/* ==========================================================================
   VIRTUAL DYNO CHART - Standalone Component
   Shows estimated HP/TQ curve based on modifications
   ========================================================================== */

.virtualDyno {
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.12) 0%, rgba(16, 185, 129, 0.03) 100%);
  border: 1px solid rgba(16, 185, 129, 0.3);
  border-radius: 20px;
  padding: 24px;
}

.compact {
  padding: 16px;
  border-radius: 16px;
}

/* Header */
.dynoHeader {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  flex-wrap: wrap;
  margin-bottom: 16px;
  gap: 12px;
}

.dynoTitleSection {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.dynoTitle {
  font-size: 18px;
  font-weight: 700;
  color: var(--brand-text-primary);
}

.dynoSubtitle {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.5);
}

/* Gain Badge */
.dynoGainBadge {
  display: flex;
  align-items: baseline;
  gap: 6px;
  background: rgba(16, 185, 129, 0.15);
  border: 1px solid rgba(16, 185, 129, 0.3);
  border-radius: 12px;
  padding: 10px 16px;
}

.dynoGainValue {
  font-size: 28px;
  font-weight: 800;
  color: var(--color-accent-teal);
}

.dynoGainUnit {
  font-size: 14px;
  font-weight: 600;
  color: var(--color-accent-teal);
}

.dynoGainPercent {
  font-size: 12px;
  color: rgba(16, 185, 129, 0.8);
  margin-left: 4px;
}

/* Legend */
.dynoLegend {
  display: flex;
  gap: 24px;
  margin-bottom: 16px;
}

.dynoLegendItem {
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 13px;
  color: rgba(255, 255, 255, 0.7);
  font-weight: 500;
}

.dynoLegendLine {
  width: 24px;
  height: 3px;
  border-radius: 2px;
}

/* Chart Container */
.dynoChart {
  display: grid;
  grid-template-columns: 45px 1fr;
  grid-template-rows: 1fr 30px;
  gap: 8px;
  height: 280px;
}

.compact .dynoChart {
  height: 220px;
}

/* Y Axis */
.dynoYAxis {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-end;
  padding: 4px 6px 4px 0;
  font-size: 11px;
  color: rgba(255, 255, 255, 0.4);
  font-weight: 500;
}

/* Chart Area */
.dynoChartArea {
  position: relative;
  background: rgba(0, 0, 0, 0.25);
  border-radius: 12px;
  overflow: hidden;
  border: 1px solid rgba(255, 255, 255, 0.05);
}

/* Grid */
.dynoGrid {
  position: absolute;
  inset: 0;
}

.dynoGridLine {
  position: absolute;
  left: 0;
  right: 0;
  height: 1px;
  background: rgba(255, 255, 255, 0.08);
}

/* SVG Curves */
.dynoCurveSvg {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
}

/* X Axis */
.dynoXAxis {
  grid-column: 2;
  display: flex;
  justify-content: space-between;
  padding: 4px 6px 0;
  font-size: 10px;
  color: rgba(255, 255, 255, 0.4);
  font-weight: 500;
}

/* Peak Markers */
.dynoPeakMarkerStock {
  position: absolute;
  transform: translate(-50%, 50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 4px 8px;
  background: rgba(0, 0, 0, 0.6);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 6px;
}

.dynoPeakValueStock {
  font-size: 12px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.6);
}

.dynoPeakMarkerMod {
  position: absolute;
  transform: translate(-50%, 0);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 6px 12px;
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.4) 0%, rgba(16, 185, 129, 0.2) 100%);
  border: 2px solid var(--color-accent-teal);
  border-radius: 10px;
  z-index: 10;
}

.dynoPeakValueMod {
  font-size: 18px;
  font-weight: 800;
  color: var(--brand-text-primary);
}

.dynoPeakLabelMod {
  font-size: 10px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.8);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Gain annotation line */
.dynoGainLine {
  position: absolute;
  width: 2px;
  background: linear-gradient(to top, rgba(16, 185, 129, 0.3), rgba(16, 185, 129, 0.8));
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.dynoGainAnnotation {
  position: absolute;
  right: -40px;
  background: rgba(16, 185, 129, 0.2);
  border: 1px solid rgba(16, 185, 129, 0.4);
  color: var(--color-accent-teal);
  font-size: 11px;
  font-weight: 700;
  padding: 2px 6px;
  border-radius: 4px;
  white-space: nowrap;
}

/* ==========================================================================
   RESPONSIVE - Mobile
   ========================================================================== */

@media (max-width: 600px) {
  .virtualDyno {
    padding: 16px;
    border-radius: 16px;
  }

  .dynoHeader {
    flex-direction: column;
    gap: 12px;
  }

  .dynoTitle {
    font-size: 16px;
  }

  .dynoSubtitle {
    font-size: 11px;
  }

  .dynoGainBadge {
    padding: 8px 12px;
    width: 100%;
    justify-content: center;
  }

  .dynoGainValue {
    font-size: 22px;
  }

  .dynoLegend {
    gap: 16px;
    flex-wrap: wrap;
  }

  .dynoLegendItem {
    font-size: 11px;
    gap: 6px;
  }

  .dynoLegendLine {
    width: 18px;
  }

  .dynoChart {
    height: 200px;
    grid-template-columns: 35px 1fr;
  }

  .dynoYAxis {
    font-size: 9px;
    padding-right: 4px;
  }

  .dynoXAxis {
    font-size: 8px;
  }

  .dynoPeakValueMod {
    font-size: 14px;
  }

  .dynoPeakLabelMod {
    font-size: 8px;
  }

  .dynoGainAnnotation {
    font-size: 10px;
    right: -32px;
  }
}
