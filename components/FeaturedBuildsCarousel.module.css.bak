/* Featured Builds Carousel - Mobile First */

.section {
  padding: var(--space-xl) 0;
  background: var(--background-secondary);
}

/* Header */
.header {
  display: flex;
  flex-direction: column;
  gap: var(--space-md);
  padding: 0 var(--space-md);
  margin-bottom: var(--space-lg);
}

@media (min-width: 768px) {
  .header {
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-end;
    padding: 0 var(--space-lg);
    max-width: var(--container-max);
    margin-left: auto;
    margin-right: auto;
  }
}

.headerText {
  flex: 1;
}

.title {
  font-family: var(--font-display);
  font-size: var(--font-size-2xl);
  font-weight: 700;
  color: var(--text-primary);
  margin: 0 0 var(--space-xs);
  letter-spacing: -0.02em;
}

@media (min-width: 768px) {
  .title {
    font-size: var(--font-size-3xl);
  }
}

.subtitle {
  font-size: var(--font-size-base);
  color: var(--text-secondary);
  margin: 0;
}

.headerActions {
  display: flex;
  align-items: center;
  gap: var(--space-md);
}

.viewAllLink {
  font-size: var(--font-size-sm);
  font-weight: 500;
  color: var(--accent-primary);
  text-decoration: none;
  transition: color 0.2s ease;
}

.viewAllLink:hover {
  color: var(--accent-secondary);
}

.arrowsDesktop {
  display: none;
}

@media (min-width: 768px) {
  .arrowsDesktop {
    display: flex;
    gap: var(--space-xs);
  }
}

.arrowBtn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border: 1px solid var(--border-subtle);
  background: var(--background-card);
  color: var(--text-primary);
  cursor: pointer;
  transition: all 0.2s ease;
}

.arrowBtn:hover:not(:disabled) {
  background: var(--accent-primary);
  border-color: var(--accent-primary);
  color: var(--text-primary);
}

.arrowBtn:disabled,
.arrowDisabled {
  opacity: 0.3;
  cursor: not-allowed;
}

/* Carousel Container */
.carouselContainer {
  position: relative;
  overflow: hidden;
}

.carousel {
  display: flex;
  gap: var(--space-md);
  padding: var(--space-sm) var(--space-md);
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.carousel::-webkit-scrollbar {
  display: none;
}

@media (min-width: 768px) {
  .carousel {
    padding: var(--space-sm) var(--space-lg);
    max-width: calc(var(--container-max) + var(--space-lg) * 2);
    margin: 0 auto;
  }
}

/* Gradient Fade Edges */
.fadeEdge {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 60px;
  pointer-events: none;
  z-index: 2;
  transition: opacity 0.3s ease;
}

.fadeLeft {
  left: 0;
  background: linear-gradient(to right, var(--background-secondary) 0%, transparent 100%);
}

.fadeRight {
  right: 0;
  background: linear-gradient(to left, var(--background-secondary) 0%, transparent 100%);
}

.fadeHidden {
  opacity: 0;
}

@media (min-width: 768px) {
  .fadeEdge {
    width: 80px;
  }
}

/* Build Card */
.card {
  flex: 0 0 280px;
  scroll-snap-align: start;
  background: var(--background-card);
  border-radius: var(--radius-lg);
  border: 1px solid var(--border-subtle);
  overflow: hidden;
  text-decoration: none;
  transition: all 0.3s ease;
}

.card:hover {
  transform: translateY(-4px);
  border-color: var(--accent-primary);
  box-shadow: 
    0 12px 40px -12px rgba(255, 77, 0, 0.3),
    0 0 0 1px rgba(255, 77, 0, 0.1);
}

@media (min-width: 768px) {
  .card {
    flex: 0 0 320px;
  }
}

@media (min-width: 1024px) {
  .card {
    flex: 0 0 340px;
  }
}

/* Card Image */
.cardImageContainer {
  position: relative;
  width: 100%;
  aspect-ratio: 16 / 10;
  background: var(--background-secondary);
}

.cardImage {
  object-fit: cover;
  transition: transform 0.3s ease;
}

.card:hover .cardImage {
  transform: scale(1.05);
}

.cardImagePlaceholder {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-secondary);
}

.cardImagePlaceholder svg {
  width: 48px;
  height: 48px;
  opacity: 0.3;
}

.cardOverlay {
  position: absolute;
  top: var(--space-sm);
  left: var(--space-sm);
  right: var(--space-sm);
  display: flex;
  justify-content: flex-start;
}

.buildStage {
  font-size: var(--font-size-xs);
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  padding: var(--space-2xs) var(--space-sm);
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(4px);
  border-radius: var(--radius-full);
  color: var(--accent-primary);
}

/* Card Content */
.cardContent {
  padding: var(--space-md);
}

.cardTitle {
  font-family: var(--font-display);
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--text-primary);
  margin: 0 0 var(--space-2xs);
  line-height: var(--line-height-tight);
  
  /* Truncate long titles */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.cardCar {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  margin: 0 0 var(--space-md);
  
  /* Truncate */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* Card Stats */
.cardStats {
  display: flex;
  gap: var(--space-md);
  padding-bottom: var(--space-sm);
  border-bottom: 1px solid var(--border-subtle);
  margin-bottom: var(--space-sm);
}

.statItem {
  display: flex;
  align-items: center;
  gap: var(--space-2xs);
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

.statItem svg {
  color: var(--accent-primary);
}

.statItem:first-child {
  color: var(--accent-primary);
  font-weight: 600;
}

/* Card Footer */
.cardFooter {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.builderName {
  font-size: var(--font-size-xs);
  color: var(--text-secondary);
}

/* CTA Container */
.ctaContainer {
  display: flex;
  justify-content: center;
  padding: var(--space-lg) var(--space-md) 0;
}

.ctaButton {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: var(--space-sm) var(--space-xl);
  background: var(--accent-primary);
  color: var(--text-primary);
  font-family: var(--font-display);
  font-size: var(--font-size-base);
  font-weight: 600;
  text-decoration: none;
  border-radius: var(--radius-md);
  transition: all 0.2s ease;
}

.ctaButton:hover {
  background: var(--accent-secondary);
  transform: translateY(-2px);
}

@media (min-width: 768px) {
  .ctaContainer {
    padding-top: var(--space-xl);
  }
  
  .ctaButton {
    padding: var(--space-md) var(--space-2xl);
    font-size: var(--font-size-lg);
  }
}
