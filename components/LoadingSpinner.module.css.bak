/**
 * LoadingSpinner - Unified loading indicator for AutoRev
 * 
 * Two variants:
 * - Simple: Three concentric spinning rings (for inline/component loading)
 * - Branded: AutoRev logo with spinning ring (for full-page loading)
 */

/* ==============================================
   SIMPLE VARIANT (default)
   ============================================== */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: var(--space-lg, 24px);
  padding: var(--space-2xl, 32px);
}

.fullPage {
  min-height: 60vh;
}

.spinner {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Size variants */
.small {
  width: 32px;
  height: 32px;
}

.medium {
  width: 48px;
  height: 48px;
}

.large {
  width: 64px;
  height: 64px;
}

.ring {
  position: absolute;
  border-radius: 50%;
  border: 3px solid transparent;
  animation: spin 1.2s ease-in-out infinite;
}

.small .ring {
  border-width: 2px;
}

.large .ring {
  border-width: 4px;
}

/* Three concentric rings with AutoRev brand colors */
.ring:nth-child(1) {
  width: 100%;
  height: 100%;
  border-top-color: var(--accent-primary, #d4a84b);
  animation-delay: 0s;
}

.ring:nth-child(2) {
  width: 75%;
  height: 75%;
  border-right-color: var(--accent-secondary, #b8922f);
  animation-delay: 0.15s;
}

.ring:nth-child(3) {
  width: 50%;
  height: 50%;
  border-bottom-color: rgba(212, 168, 75, 0.4);
  animation-delay: 0.3s;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.text {
  font-size: var(--font-size-sm, 14px);
  color: var(--text-secondary, rgba(255, 255, 255, 0.6));
  margin: 0;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

/* ==============================================
   BRANDED VARIANT (premium full-page loading)
   ============================================== */

.brandedContainer {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 48px 24px;
  /* Subtle radial gradient for premium feel */
  background: radial-gradient(
    ellipse 60% 40% at 50% 45%,
    rgba(212, 168, 75, 0.04) 0%,
    transparent 70%
  );
}

.logoWrapper {
  position: relative;
  width: 100px;
  height: 100px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32px;
}

.logoImage {
  width: 56px;
  height: 56px;
  object-fit: contain;
  z-index: 2;
  animation: logoPulse 2s ease-in-out infinite;
}

@keyframes logoPulse {
  0%, 100% { 
    opacity: 0.8;
    transform: scale(1);
  }
  50% { 
    opacity: 1;
    transform: scale(1.05);
  }
}

.logoRing {
  position: absolute;
  inset: 0;
  border: 2px solid transparent;
  border-top-color: var(--accent-primary, #d4a84b);
  border-radius: 50%;
  animation: spin 1.2s linear infinite;
}

.logoRing::before {
  content: '';
  position: absolute;
  inset: -8px;
  border: 1px solid rgba(212, 168, 75, 0.15);
  border-radius: 50%;
}

.logoRing::after {
  content: '';
  position: absolute;
  inset: 8px;
  border: 1px solid rgba(212, 168, 75, 0.1);
  border-radius: 50%;
}

.brandedTitle {
  font-family: var(--font-display, system-ui);
  font-size: 20px;
  font-weight: 700;
  color: var(--color-white, var(--brand-text-primary));
  margin: 0 0 8px;
  text-transform: uppercase;
  letter-spacing: 0.1em;
}

.brandedSubtext {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.5);
  margin: 0;
  animation: textFade 2s ease-in-out infinite;
}

@keyframes textFade {
  0%, 100% { opacity: 0.5; }
  50% { opacity: 0.8; }
}