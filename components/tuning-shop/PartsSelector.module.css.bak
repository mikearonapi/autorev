/* Parts List / Shopping List Styles */

.container {
  background: rgba(0, 0, 0, 0.25);
  border: 1px solid rgba(255, 255, 255, 0.08);
  border-radius: 14px;
  padding: 20px;
}

/* Header */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8px;
}

.headerLeft {
  display: flex;
  align-items: center;
  gap: 8px;
  color: rgba(255, 255, 255, 0.9);
}

.title {
  font-size: 14px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.count {
  font-size: 12px;
  padding: 2px 8px;
  background: rgba(59, 130, 246, 0.15);
  color: var(--brand-blue-light);
  border-radius: 10px;
  font-weight: 500;
}

.copyBtn {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  padding: 8px 14px;
  font-size: 12px;
  font-weight: 500;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  color: rgba(255, 255, 255, 0.7);
  cursor: pointer;
  transition: all 0.2s;
}

.copyBtn:hover {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.9);
}

/* Subtitle */
.subtitle {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 12px;
  color: rgba(255, 255, 255, 0.4);
  margin: 0 0 16px 0;
}

/* Shopping List */
.list {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

/* List Item */
.listItem {
  background: rgba(0, 0, 0, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.06);
  border-radius: 10px;
  overflow: hidden;
  transition: border-color 0.2s;
}

.listItem.hasDetails {
  border-color: rgba(16, 185, 129, 0.3);
}

.itemHeader {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 14px 16px;
}

/* Checkbox */
.itemCheckbox {
  flex-shrink: 0;
}

.checkboxEmpty {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 20px;
  height: 20px;
  border: 2px solid rgba(255, 255, 255, 0.2);
  border-radius: 4px;
}

.checkboxChecked {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 20px;
  height: 20px;
  background: var(--brand-teal);
  border-radius: 4px;
  color: var(--brand-text-primary);
}

/* Item Info */
.itemInfo {
  flex: 1;
  min-width: 0;
}

.itemName {
  display: block;
  font-size: 14px;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.9);
}

.itemBrand {
  display: block;
  font-size: 12px;
  color: rgba(255, 255, 255, 0.5);
  margin-top: 2px;
}


/* Inline Add/Edit Part Button */
.addPartInline,
.editPartInline {
  display: inline-flex;
  align-items: center;
  gap: 4px;
  padding: 4px 10px;
  font-size: 11px;
  font-weight: 500;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.2s;
  margin-left: 8px;
  vertical-align: middle;
}

.addPartInline {
  background: rgba(59, 130, 246, 0.15);
  border: 1px solid rgba(59, 130, 246, 0.3);
  color: var(--brand-blue-light);
}

.addPartInline:hover {
  background: rgba(59, 130, 246, 0.25);
  border-color: rgba(59, 130, 246, 0.5);
}

.editPartInline {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.6);
}

.editPartInline:hover {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.8);
}

/* Item Actions */
.itemActions {
  display: flex;
  align-items: center;
  gap: 8px;
  flex-shrink: 0;
}

.askAlBtn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  background: rgba(251, 191, 36, 0.1);
  border: 1px solid rgba(251, 191, 36, 0.2);
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.2s;
  padding: 0;
}

.askAlBtn:hover {
  background: rgba(251, 191, 36, 0.2);
  border-color: rgba(251, 191, 36, 0.4);
  transform: scale(1.05);
}

.alAvatar {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  object-fit: cover;
}


/* Edit Form */
.editForm {
  padding: 0 16px 16px;
  border-top: 1px solid rgba(255, 255, 255, 0.06);
}

.editRow {
  display: flex;
  gap: 10px;
  margin-top: 12px;
}

.input {
  flex: 1;
  padding: 10px 12px;
  background: rgba(0, 0, 0, 0.3);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  color: var(--brand-text-primary);
  font-size: 13px;
  transition: border-color 0.2s;
}

.input::placeholder {
  color: rgba(255, 255, 255, 0.3);
}

.input:focus {
  outline: none;
  border-color: rgba(59, 130, 246, 0.5);
}

.inputSmall {
  max-width: 100px;
}

.editActions {
  display: flex;
  justify-content: flex-end;
  gap: 8px;
  margin-top: 12px;
}

.cancelBtn,
.saveBtn {
  padding: 8px 16px;
  font-size: 13px;
  font-weight: 500;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.2s;
}

.cancelBtn {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.7);
}

.cancelBtn:hover {
  background: rgba(255, 255, 255, 0.1);
}

.saveBtn {
  background: var(--brand-lime);
  border: none;
  color: var(--brand-bg-primary);
}

.saveBtn:hover {
  background: var(--brand-lime-dark);
}

/* Total Row */
.totalRow {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14px 16px;
  margin-top: 12px;
  background: rgba(16, 185, 129, 0.08);
  border: 1px solid rgba(16, 185, 129, 0.2);
  border-radius: 10px;
  font-size: 14px;
  color: rgba(255, 255, 255, 0.8);
}

.totalAmount {
  font-weight: 600;
  color: var(--brand-teal);
  font-size: 16px;
}

/* AL Build Review Button */
.buildReviewBtn {
  display: flex;
  align-items: center;
  gap: 12px;
  width: 100%;
  padding: 16px;
  margin-top: 16px;
  background: linear-gradient(135deg, rgba(212, 160, 74, 0.12), rgba(212, 160, 74, 0.04));
  border: 1px solid rgba(212, 160, 74, 0.25);
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.2s;
  text-align: left;
}

.buildReviewBtn:hover {
  background: linear-gradient(135deg, rgba(212, 160, 74, 0.18), rgba(212, 160, 74, 0.08));
  border-color: rgba(212, 160, 74, 0.4);
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(212, 160, 74, 0.15);
}

.buildReviewBtn .alAvatar {
  width: 22px;
  height: 22px;
  flex-shrink: 0;
}

.buildReviewText {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.buildReviewTitle {
  font-size: 14px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.9);
}

.buildReviewSubtitle {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.5);
}

/* Mobile Responsive */
@media (max-width: 640px) {
  .container {
    padding: 16px;
    max-width: 100%;
    overflow: hidden;
    box-sizing: border-box;
  }
  
  .header {
    flex-direction: column;
    align-items: flex-start;
    gap: 12px;
    max-width: 100%;
  }
  
  .headerLeft {
    flex-wrap: wrap;
    max-width: 100%;
  }
  
  .title {
    font-size: 13px;
  }
  
  .copyBtn {
    width: 100%;
    justify-content: center;
  }
  
  .subtitle {
    flex-wrap: wrap;
  }
  
  .list {
    max-width: 100%;
    overflow: hidden;
  }
  
  .listItem {
    max-width: 100%;
    overflow: hidden;
  }
  
  .editRow {
    flex-wrap: wrap;
  }
  
  .input {
    min-width: 0;
    font-size: 16px; /* Prevent iOS zoom */
  }
  
  .inputSmall {
    flex: 1;
    max-width: none;
  }
  
  .itemHeader {
    padding: 12px;
    gap: 10px;
    max-width: 100%;
  }
  
  .itemInfo {
    flex-wrap: wrap;
    min-width: 0;
    overflow: hidden;
  }
  
  .itemName {
    font-size: 13px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 100%;
  }
  
  .itemBrand {
    font-size: 11px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 100%;
  }
  
  .itemActions {
    flex-shrink: 0;
    gap: 6px;
  }
  
  .addPartInline,
  .editPartInline {
    margin-left: 0;
    margin-top: 6px;
  }
  
  .buildReviewBtn {
    padding: 14px;
    gap: 10px;
  }
  
  .buildReviewText {
    min-width: 0;
    overflow: hidden;
  }
  
  .buildReviewTitle {
    font-size: 13px;
  }
  
  .buildReviewSubtitle {
    font-size: 11px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
}
