/* ===========================================
   ERROR BOUNDARY STYLES
   Fallback UI for React error boundaries
   =========================================== */

/* Full-page error container */
.errorContainer {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 300px;
  padding: 24px;
  background: rgba(15, 16, 18, 0.95);
  border-radius: 12px;
  border: 1px solid rgba(239, 68, 68, 0.2);
}

.errorContent {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  max-width: 400px;
  gap: 16px;
}

.errorIcon {
  width: 64px;
  height: 64px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(239, 68, 68, 0.1);
  border-radius: 50%;
  color: var(--brand-error);
}

.errorTitle {
  font-family: var(--font-display, system-ui);
  font-size: 20px;
  font-weight: 700;
  color: var(--brand-text-primary);
  margin: 0;
}

.errorMessage {
  font-size: 14px;
  line-height: 1.5;
  color: rgba(255, 255, 255, 0.6);
  margin: 0;
}

.errorDetails {
  width: 100%;
  text-align: left;
  margin-top: 8px;
}

.errorDetails summary {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.4);
  cursor: pointer;
  padding: 8px;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 6px;
}

.errorDetails summary:hover {
  background: rgba(255, 255, 255, 0.05);
}

.errorStack {
  font-family: monospace;
  font-size: 11px;
  color: var(--brand-error-light);
  background: rgba(0, 0, 0, 0.4);
  padding: 12px;
  border-radius: 6px;
  margin-top: 8px;
  overflow-x: auto;
  white-space: pre-wrap;
  word-break: break-word;
  max-height: 200px;
  overflow-y: auto;
}

.errorActions {
  display: flex;
  gap: 12px;
  margin-top: 8px;
}

.retryButton,
.reloadButton {
  padding: 10px 20px;
  border: none;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.15s ease;
}

.retryButton {
  background: rgba(239, 68, 68, 0.15);
  color: var(--brand-error);
  border: 1px solid rgba(239, 68, 68, 0.3);
}

.retryButton:hover {
  background: rgba(239, 68, 68, 0.25);
}

.reloadButton {
  background: linear-gradient(135deg, var(--accent-primary, #ff4d00) 0%, #b8973a 100%);
  color: var(--brand-bg-primary);
}

.reloadButton:hover {
  background: linear-gradient(135deg, #e6c54a 0%, var(--accent-primary, #ff4d00) 100%);
}

/* Compact error for smaller sections */
.compactError {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 12px 16px;
  background: rgba(239, 68, 68, 0.08);
  border: 1px solid rgba(239, 68, 68, 0.15);
  border-radius: 8px;
  color: rgba(255, 255, 255, 0.7);
  font-size: 13px;
}

.compactIcon {
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--brand-error);
  flex-shrink: 0;
}

.compactText {
  flex: 1;
}

.compactRetry {
  padding: 6px 12px;
  background: rgba(255, 255, 255, 0.08);
  border: 1px solid rgba(255, 255, 255, 0.12);
  border-radius: 6px;
  color: rgba(255, 255, 255, 0.8);
  font-size: 12px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.15s ease;
}

.compactRetry:hover {
  background: rgba(255, 255, 255, 0.12);
  color: var(--brand-text-primary);
}









