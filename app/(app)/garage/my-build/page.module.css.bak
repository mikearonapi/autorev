/* ==========================================================================
   My Build Page - Upgrade Configuration Center
   ========================================================================== */

.page {
  min-height: 100vh;
  min-height: 100dvh;
  width: 100%;
  max-width: 100vw;
  max-width: 100dvw;
  overflow-x: hidden;
  box-sizing: border-box;
  background: var(--brand-bg-primary);
  color: var(--color-white);
  padding-bottom: calc(80px + env(safe-area-inset-bottom, 20px));
  display: flex;
  flex-direction: column;
}

.loadingContainer {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
}

/* Upgrade Center Container */
.upgradeContainer {
  flex: 1;
  /* UpgradeCenter handles its own padding */
}

/* Save Button */
.saveButton {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  border: none;
  color: rgba(255, 255, 255, 0.7);
  cursor: pointer;
  transition: all 0.2s ease;
  border-radius: 10px;
}

.saveButton:hover {
  color: var(--color-white);
  background: rgba(255, 255, 255, 0.08);
}

.saveButton:active {
  transform: scale(0.95);
}

/* Empty State */
.emptyState {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 24px;
  text-align: center;
  min-height: 60vh;
}

.emptyIcon {
  width: 100px;
  height: 100px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.04);
  border: 1px solid rgba(255, 255, 255, 0.08);
  border-radius: 24px;
  color: rgba(255, 255, 255, 0.3);
  margin-bottom: 24px;
}

.emptyTitle {
  font-size: 1.5rem;
  font-weight: 700;
  margin: 0 0 12px;
}

.emptyText {
  font-size: 0.9375rem;
  color: rgba(255, 255, 255, 0.6);
  margin: 0 0 32px;
  max-width: 280px;
  line-height: 1.5;
}

.emptyActions {
  display: flex;
  flex-direction: column;
  gap: 12px;
  width: 100%;
  max-width: 260px;
}

.emptyActionPrimary {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  width: 100%;
  padding: 14px 24px;
  background: var(--brand-lime, var(--brand-lime));
  color: var(--gravl-navy, var(--brand-bg-primary-dark));
  border: none;
  border-radius: 12px;
  font-size: 0.9375rem;
  font-weight: 700;
  text-decoration: none;
  cursor: pointer;
  transition: all 0.2s ease;
}

.emptyActionPrimary:hover {
  background: var(--brand-lime-dark, #bfe600);
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(212, 255, 0, 0.25);
}

.emptyActionSecondary {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  width: 100%;
  padding: 14px 24px;
  background: rgba(255, 255, 255, 0.06);
  color: var(--color-white);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  font-size: 0.9375rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
}

.emptyActionSecondary:hover {
  background: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.15);
}

/* Mobile Responsive */
@media (max-width: 480px) {
  .emptyTitle {
    font-size: 1.25rem;
  }
  
  .emptyText {
    font-size: 0.875rem;
  }
  
  .emptyActions {
    max-width: 240px;
  }
  
  .emptyActionPrimary,
  .emptyActionSecondary {
    padding: 12px 20px;
    font-size: 0.875rem;
  }
}
