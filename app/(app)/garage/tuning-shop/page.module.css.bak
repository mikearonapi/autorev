/* ==========================================================================
   Garage Tuning Shop Page
   Focused upgrade center for a specific build
   Visually consistent with Vehicles and Builds pages
   ========================================================================== */

.page {
  min-height: 100vh;
  min-height: 100dvh;
  /* Prevent horizontal overflow */
  width: 100%;
  max-width: 100vw;
  max-width: 100dvw;
  overflow-x: hidden;
  box-sizing: border-box;
  /* Solid background for seamless edge-to-edge feel */
  background: var(--brand-bg-primary);
  color: var(--color-white);
  padding-bottom: calc(80px + env(safe-area-inset-bottom, 20px));
  display: flex;
  flex-direction: column;
}

.loadingContainer {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
}

/* ==========================================================================
   Garage Navigation - Consistent across all garage pages
   ========================================================================== */

.garageNav {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 10px 16px;
  padding-top: calc(10px + env(safe-area-inset-top, 0));
  background: transparent;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 50;
}

.garageNavTabs {
  display: flex;
  align-items: center;
  gap: 0;
  background: rgba(255, 255, 255, 0.06);
  border: 1px solid rgba(255, 255, 255, 0.08);
  border-radius: 10px;
  padding: 3px;
}

.garageNavTab {
  padding: 8px 16px;
  font-size: 12px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.6);
  text-decoration: none;
  border-radius: 8px;
  transition: all 0.2s ease;
  letter-spacing: 0.02em;
}

.garageNavTab:hover {
  color: rgba(255, 255, 255, 0.9);
  background: rgba(255, 255, 255, 0.05);
}

.garageNavTabActive {
  background: var(--accent-primary, var(--brand-gold));
  color: var(--brand-bg-primary);
  font-weight: 700;
  box-shadow: 0 2px 8px rgba(212, 168, 75, 0.3);
}

.garageNavTabActive:hover {
  background: var(--accent-primary-hover, var(--brand-gold-light));
  color: var(--brand-bg-primary);
}

/* Simple + button - matches main garage page */
.garageNavAdd {
  position: absolute;
  right: 8px;
  top: 50%;
  transform: translateY(-50%);
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  color: var(--accent-primary, var(--brand-gold));
  border: none;
  text-decoration: none;
  cursor: pointer;
  transition: all 0.2s ease;
}

.garageNavAdd svg {
  width: 20px;
  height: 20px;
  stroke-width: 2.5px;
}

.garageNavAdd:hover {
  color: var(--accent-primary-hover, var(--brand-gold-light));
}

.garageNavAdd:active {
  transform: translateY(-50%) scale(0.9);
}

/* ==========================================================================
   Empty State - No build selected
   ========================================================================== */

.emptyState {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 40px 24px;
  /* Account for absolutely positioned nav */
  padding-top: calc(100px + env(safe-area-inset-top, 0));
}

.emptyIcon {
  width: 80px;
  height: 80px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(212, 168, 75, 0.1);
  border: 1px solid rgba(212, 168, 75, 0.2);
  border-radius: 50%;
  color: var(--accent-primary, var(--brand-gold));
  margin-bottom: 20px;
}

.emptyTitle {
  font-family: var(--font-display);
  font-size: 24px;
  font-weight: 700;
  color: var(--color-white);
  margin: 0 0 8px;
}

.emptyText {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.6);
  margin: 0 0 32px;
  max-width: 280px;
}

.emptyActions {
  display: flex;
  flex-direction: column;
  gap: 12px;
  width: 100%;
  max-width: 280px;
}

.emptyActionPrimary {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 14px 24px;
  background: var(--accent-primary, var(--brand-gold));
  border: none;
  border-radius: 12px;
  color: var(--brand-bg-primary);
  font-size: 15px;
  font-weight: 600;
  text-decoration: none;
  cursor: pointer;
  transition: all 0.2s ease;
}

.emptyActionPrimary:hover {
  background: var(--brand-gold-hover);
  transform: translateY(-1px);
}

.emptyActionSecondary {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 14px 24px;
  background: rgba(255, 255, 255, 0.08);
  border: 1px solid rgba(255, 255, 255, 0.15);
  border-radius: 12px;
  color: var(--color-white);
  font-size: 15px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.emptyActionSecondary:hover {
  background: rgba(255, 255, 255, 0.12);
  border-color: rgba(255, 255, 255, 0.25);
}

/* ==========================================================================
   Build Header - Centered title pill with actions
   ========================================================================== */

.buildHeader {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12px 16px;
  /* Account for safe area (notch) */
  padding-top: calc(12px + env(safe-area-inset-top, 0));
  position: relative;
}

.backButton {
  position: absolute;
  left: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  background: transparent;
  border: none;
  color: rgba(255, 255, 255, 0.7);
  cursor: pointer;
  transition: color 0.2s ease;
  padding: 0;
}

.backButton:hover {
  color: var(--color-white);
}

.buildHeaderTitle {
  display: inline-block;
  padding: 10px 24px;
  background: rgba(255, 255, 255, 0.06);
  border: 1px solid rgba(255, 255, 255, 0.08);
  border-radius: 10px;
  font-size: 14px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.7);
  margin: 0;
  letter-spacing: 0.02em;
}

.headerActionBtn {
  position: absolute;
  right: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  background: transparent;
  border: none;
  color: rgba(255, 255, 255, 0.5);
  cursor: pointer;
  transition: all 0.2s ease;
  padding: 0;
}

.headerActionBtn:hover {
  color: var(--color-white);
}

/* Delete Build has been moved to build management elsewhere */

/* ==========================================================================
   Build Stats - Performance summary
   ========================================================================== */

.buildStats {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 16px;
  background: linear-gradient(135deg, rgba(212, 168, 75, 0.08) 0%, rgba(212, 168, 75, 0.02) 100%);
  border-bottom: 1px solid rgba(212, 168, 75, 0.15);
}

.buildStat {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2px;
}

.buildStatValue {
  font-size: 18px;
  font-weight: 700;
  color: var(--accent-primary, var(--brand-gold));
}

.buildStatLabel {
  font-size: 10px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.5);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

/* ==========================================================================
   Upgrade Container
   ========================================================================== */

.upgradeContainer {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

/* ==========================================================================
   Mobile Adjustments
   ========================================================================== */

@media (max-width: 480px) {
  .garageNavTab {
    padding: 8px 14px;
    font-size: 13px;
  }

  .buildHeader {
    padding: 10px 12px;
  }

  .backButton {
    left: 12px;
  }

  .headerActionBtn {
    right: 12px;
  }

  .buildHeaderTitle {
    padding: 8px 20px;
    font-size: 13px;
  }

  .emptyTitle {
    font-size: 20px;
  }
}
