/* ===========================================
   AL Chat Page - Dedicated AI Assistant Page
   =========================================== */

.container {
  display: flex;
  flex-direction: column;
  height: 100dvh;
  height: calc(100vh - 72px); /* Account for tab bar */
  background: linear-gradient(180deg, var(--color-bg-base) 0%, var(--color-bg-elevated) 100%);
  color: var(--color-text-primary);
  overflow: hidden;
}

/* Safe area adjustments */
@supports (padding-top: env(safe-area-inset-top)) {
  .container {
    padding-top: env(safe-area-inset-top);
    height: calc(100dvh - 72px - env(safe-area-inset-bottom));
  }
}

/* ===========================================
   Header
   =========================================== */

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px;
  background: rgba(0, 0, 0, 0.2);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  flex-shrink: 0;
}

.headerCenter {
  display: flex;
  align-items: center;
  gap: 10px;
}

.headerAvatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  border: 2px solid var(--color-accent-gold);
}

.headerTitle {
  font-size: 18px;
  font-weight: 600;
  color: var(--color-text-primary);
}

.historyBtn,
.newChatHeaderBtn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  background: rgba(255, 255, 255, 0.1);
  border: none;
  border-radius: 10px;
  color: rgba(255, 255, 255, 0.8);
  cursor: pointer;
  transition: all 0.2s ease;
}

.historyBtn:hover,
.newChatHeaderBtn:hover {
  background: rgba(255, 255, 255, 0.15);
  color: var(--color-text-primary);
}

/* ===========================================
   Messages Area
   =========================================== */

.messagesArea {
  flex: 1;
  overflow-y: auto;
  overflow-x: hidden;
  padding: 16px;
  display: flex;
  flex-direction: column;
}

.messages {
  display: flex;
  flex-direction: column;
  gap: 16px;
  max-width: 800px;
  width: 100%;
  margin: 0 auto;
}

.message {
  display: flex;
  gap: 12px;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(8px); }
  to { opacity: 1; transform: translateY(0); }
}

.userMessage {
  flex-direction: row-reverse;
}

.userMessage .messageContent {
  background: linear-gradient(135deg, var(--sn-primary) 0%, var(--sn-primary-light) 100%);
  border-radius: 18px 18px 4px 18px;
  margin-left: auto;
}

.assistantMessage .messageContent {
  background: rgba(255, 255, 255, 0.08);
  border-radius: 18px 18px 18px 4px;
}

.messageAvatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  flex-shrink: 0;
  border: 2px solid var(--color-accent-gold);
}

.messageContent {
  padding: 12px 16px;
  font-size: 15px;
  line-height: 1.5;
  max-width: 80%;
  word-wrap: break-word;
  white-space: pre-wrap;
}

.cursor {
  animation: blink 1s infinite;
  color: var(--color-accent-gold);
}

@keyframes blink {
  0%, 50% { opacity: 1; }
  51%, 100% { opacity: 0; }
}

.typing {
  color: rgba(255, 255, 255, 0.6);
  font-style: italic;
}

.errorMessage {
  background: rgba(239, 68, 68, 0.2);
  border: 1px solid rgba(239, 68, 68, 0.3);
  border-radius: 12px;
  padding: 12px 16px;
  color: var(--color-error);
  font-size: 14px;
  text-align: center;
}

/* ===========================================
   Empty State
   =========================================== */

.emptyState {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  padding: 24px;
  text-align: center;
}

.emptyTitle {
  font-size: 24px;
  font-weight: 600;
  margin: 20px 0 8px;
  color: var(--color-text-primary);
}

.emptySubtitle {
  font-size: 15px;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 32px;
}

.suggestions {
  display: flex;
  flex-direction: column;
  gap: 10px;
  width: 100%;
  max-width: 320px;
}

.suggestionBtn {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 14px 16px;
  background: rgba(255, 255, 255, 0.08);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  color: var(--color-text-primary);
  font-size: 14px;
  text-align: left;
  cursor: pointer;
  transition: all 0.2s ease;
}

.suggestionBtn:hover {
  background: rgba(255, 255, 255, 0.12);
  border-color: rgba(212, 160, 74, 0.3);
}

.suggestionIcon {
  font-size: 18px;
}

/* ===========================================
   Input Area
   =========================================== */

.inputArea {
  padding: 12px 16px;
  padding-bottom: max(12px, env(safe-area-inset-bottom));
  background: rgba(0, 0, 0, 0.3);
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  flex-shrink: 0;
}

.inputWrapper {
  display: flex;
  align-items: flex-end;
  gap: 8px;
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.15);
  border-radius: 24px;
  padding: 6px 6px 6px 16px;
  max-width: 800px;
  margin: 0 auto;
}

.inputWrapper:focus-within {
  border-color: rgba(212, 160, 74, 0.5);
  background: rgba(255, 255, 255, 0.12);
}

.input {
  flex: 1;
  padding: 8px 0;
  background: transparent;
  border: none;
  font-size: 16px;
  font-family: inherit;
  color: var(--color-text-primary);
  resize: none;
  min-height: 24px;
  max-height: 120px;
  line-height: 1.4;
}

.input:focus {
  outline: none;
}

.input::placeholder {
  color: rgba(255, 255, 255, 0.4);
}

.sendBtn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  background: linear-gradient(135deg, var(--color-accent-lime) 0%, var(--color-accent-lime-dark) 100%);
  border: none;
  border-radius: 50%;
  color: var(--color-text-inverted);
  cursor: pointer;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.sendBtn:hover:not(:disabled) {
  transform: scale(1.05);
  box-shadow: var(--shadow-lime);
}

.sendBtn:disabled {
  opacity: 0.4;
  cursor: not-allowed;
  background: rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.4);
}

/* ===========================================
   Sign In Prompt
   =========================================== */

.signInPrompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  padding: 32px 24px;
  text-align: center;
}

.title {
  font-size: 32px;
  font-weight: 700;
  margin: 24px 0 4px;
  color: var(--color-text-primary);
}

.subtitle {
  font-size: 16px;
  color: var(--color-accent-gold);
  font-weight: 500;
  margin-bottom: 16px;
}

.description {
  font-size: 15px;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.6;
  max-width: 320px;
  margin-bottom: 32px;
}

.signInBtn {
  padding: 16px 32px;
  background: linear-gradient(135deg, var(--color-accent-lime) 0%, var(--color-accent-lime-dark) 100%);
  border: none;
  border-radius: 12px;
  color: var(--color-text-inverted);
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.signInBtn:hover {
  transform: scale(1.02);
  box-shadow: var(--shadow-lime);
}

/* ===========================================
   History View
   =========================================== */

.historyView {
  display: flex;
  flex-direction: column;
  flex: 1;
  overflow: hidden;
}

.historyHeader {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 16px 20px;
  font-size: 12px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.6);
  text-transform: uppercase;
  letter-spacing: 0.5px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.historyHeader span {
  flex: 1;
}

.closeHistoryBtn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  background: rgba(255, 255, 255, 0.1);
  border: none;
  border-radius: 8px;
  color: rgba(255, 255, 255, 0.6);
  cursor: pointer;
  font-size: 16px;
}

.closeHistoryBtn:hover {
  background: rgba(255, 255, 255, 0.15);
  color: var(--color-text-primary);
}

.newChatBtn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  margin: 12px 16px;
  padding: 12px 16px;
  background: linear-gradient(135deg, var(--sn-primary) 0%, var(--sn-primary-light) 100%);
  border: none;
  border-radius: 10px;
  color: var(--color-text-primary);
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
}

.newChatBtn:hover {
  background: linear-gradient(135deg, var(--brand-primary-dark) 0%, var(--brand-blue) 100%);
}

.conversationsList {
  flex: 1;
  overflow-y: auto;
  padding: 0 12px 80px;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.conversationItem {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
  padding: 12px 14px;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid transparent;
  border-radius: 10px;
  cursor: pointer;
  transition: all 0.15s ease;
  text-align: left;
}

.conversationItem:hover {
  background: rgba(255, 255, 255, 0.08);
}

.conversationItemActive {
  background: rgba(212, 160, 74, 0.15);
  border-color: rgba(212, 160, 74, 0.3);
}

.conversationTitle {
  flex: 1;
  font-size: 14px;
  font-weight: 500;
  color: var(--color-text-primary);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.conversationDate {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.5);
  flex-shrink: 0;
}

.loadingConversations,
.noConversations {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 20px;
  color: rgba(255, 255, 255, 0.5);
  font-size: 14px;
}

.noConversationsHint {
  font-size: 13px;
  color: rgba(255, 255, 255, 0.3);
  margin-top: 4px;
}

/* ===========================================
   Loading State
   =========================================== */

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
}

.spinner {
  width: 40px;
  height: 40px;
  border: 3px solid rgba(255, 255, 255, 0.1);
  border-top-color: var(--color-accent-lime);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* ===========================================
   Responsive Adjustments
   =========================================== */

@media (max-width: 480px) {
  .container {
    height: calc(100dvh - 72px);
  }
  
  .emptyTitle {
    font-size: 22px;
  }
  
  .suggestions {
    max-width: 100%;
  }
  
  .messageContent {
    max-width: 85%;
    font-size: 14px;
  }
}

/* Tablet */
@media (min-width: 481px) and (max-width: 1024px) {
  .container {
    height: calc(100dvh - 80px);
  }
}

/* Desktop - no tab bar */
@media (min-width: 1024px) {
  .container {
    height: 100dvh;
  }
}
