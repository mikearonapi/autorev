/* ==========================================================================
   Performance Page - Dyno & Track Hub
   
   GRAVL-Inspired Design:
   - Clean tab navigation
   - Card-based content
   - Clear data visualization
   ========================================================================== */

.page {
  min-height: 100vh;
  min-height: 100dvh;
  /* Solid background for consistent app feel */
  background: var(--brand-bg-primary);
  /* Bottom padding for tab bar - allows content to scroll behind frosted glass */
  padding-bottom: calc(80px + env(safe-area-inset-bottom, 20px));
}

/* ==========================================================================
   Header
   ========================================================================== */

.header {
  padding: var(--space-lg, 24px);
  padding-top: calc(var(--space-lg, 24px) + env(safe-area-inset-top, 0));
  background: linear-gradient(180deg, var(--bg-secondary, #141414) 0%, transparent 100%);
}

.title {
  font-family: var(--font-display);
  font-size: 28px;
  font-weight: 700;
  color: var(--text-primary, #ffffff);
  margin: 0 0 var(--space-xs, 8px);
}

.subtitle {
  font-size: 15px;
  color: var(--text-secondary, #a0a0a0);
  margin: 0;
}

/* ==========================================================================
   Tab Navigation
   ========================================================================== */

.tabNav {
  display: flex;
  gap: var(--space-xs, 8px);
  padding: 0 var(--space-lg, 24px);
  margin-bottom: var(--space-lg, 24px);
  overflow-x: auto;
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.tabNav::-webkit-scrollbar {
  display: none;
}

.tabBtn {
  display: flex;
  align-items: center;
  gap: var(--space-xs, 8px);
  padding: 12px 20px;
  background: var(--bg-card, #161616);
  border: 1px solid var(--border-subtle, #1a1a1a);
  border-radius: 10px;
  color: var(--text-secondary, #a0a0a0);
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.15s ease;
  white-space: nowrap;
}

.tabBtn:hover {
  background: var(--bg-card-hover, #1c1c1c);
  border-color: var(--border-default, #252525);
  color: var(--text-primary, #ffffff);
}

.tabBtnActive {
  background: var(--accent-primary, #ff4d00);
  border-color: var(--accent-primary, #ff4d00);
  color: var(--brand-text-primary);
}

.tabBtnActive:hover {
  background: var(--accent-primary-light, #ff6620);
}

/* ==========================================================================
   Content Area
   ========================================================================== */

.content {
  padding: 0 var(--space-lg, 24px);
}

/* Section Headers */
.sectionHeader {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--space-md, 16px);
}

.sectionHeader h2 {
  font-size: 15px;
  font-weight: 600;
  color: var(--text-secondary, #a0a0a0);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin: 0;
}

.addLink,
.addBtn {
  display: flex;
  align-items: center;
  gap: var(--space-xs, 8px);
  padding: 8px 14px;
  background: transparent;
  border: 1px solid var(--border-default, #252525);
  border-radius: 8px;
  color: var(--text-secondary, #a0a0a0);
  font-size: 13px;
  font-weight: 500;
  cursor: pointer;
  text-decoration: none;
  transition: all 0.15s ease;
}

.addLink:hover,
.addBtn:hover {
  border-color: var(--accent-primary, #ff4d00);
  color: var(--accent-primary, #ff4d00);
}

/* ==========================================================================
   Estimates Tab
   ========================================================================== */

.estimatesList {
  display: flex;
  flex-direction: column;
  gap: var(--space-md, 16px);
}

.estimateCard {
  background: var(--bg-card, #161616);
  border: 1px solid var(--border-subtle, #1a1a1a);
  border-radius: 14px;
  padding: var(--space-md, 16px);
  transition: all 0.15s ease;
}

.estimateCard:hover {
  border-color: var(--border-default, #252525);
}

.estimateCardHeader {
  display: flex;
  align-items: center;
  gap: var(--space-md, 16px);
  margin-bottom: var(--space-md, 16px);
}

.estimateCarImage {
  width: 64px;
  height: 48px;
  border-radius: 8px;
  overflow: hidden;
  flex-shrink: 0;
}

.estimateCarInfo {
  flex: 1;
  min-width: 0;
}

.estimateBuildName {
  display: block;
  font-size: 16px;
  font-weight: 600;
  color: var(--text-primary, #ffffff);
  margin-bottom: 2px;
}

.estimateCarName {
  font-size: 13px;
  color: var(--text-secondary, #a0a0a0);
}

.estimateStats {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--space-sm, 12px);
  margin-bottom: var(--space-md, 16px);
  padding: var(--space-md, 16px);
  background: var(--bg-secondary, #141414);
  border-radius: 10px;
}

.estimateStat {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.estimateStatLabel {
  font-size: 11px;
  font-weight: 500;
  color: var(--text-tertiary, #666666);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.estimateStatValue {
  font-size: 24px;
  font-weight: 700;
  color: var(--text-primary, #ffffff);
  font-family: var(--font-display);
}

.estimateStatUnit {
  font-size: 14px;
  font-weight: 500;
  color: var(--text-secondary, #a0a0a0);
}

.estimateStatGain {
  font-size: 13px;
  font-weight: 600;
  color: var(--color-green-400, #4ade80);
  margin-left: var(--space-xs, 8px);
}

.estimateActions {
  display: flex;
  gap: var(--space-sm, 12px);
}

.estimateActionBtn {
  flex: 1;
  padding: 12px 16px;
  background: var(--bg-secondary, #141414);
  border: 1px solid var(--border-default, #252525);
  border-radius: 8px;
  color: var(--text-primary, #ffffff);
  font-size: 14px;
  font-weight: 500;
  text-align: center;
  text-decoration: none;
  cursor: pointer;
  transition: all 0.15s ease;
}

.estimateActionBtn:hover {
  background: var(--bg-card-hover, #1c1c1c);
  border-color: var(--accent-primary, #ff4d00);
}

/* ==========================================================================
   Track Log Tab
   ========================================================================== */

.sessionsList {
  display: flex;
  flex-direction: column;
  gap: var(--space-md, 16px);
}

.sessionCard {
  background: var(--bg-card, #161616);
  border: 1px solid var(--border-subtle, #1a1a1a);
  border-radius: 14px;
  padding: var(--space-md, 16px);
}

.sessionHeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-md, 16px);
}

.sessionTrack {
  font-size: 16px;
  font-weight: 600;
  color: var(--text-primary, #ffffff);
}

.sessionDate {
  font-size: 13px;
  color: var(--text-tertiary, #666666);
}

.sessionStats {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--space-sm, 12px);
}

.sessionStat {
  display: flex;
  flex-direction: column;
  gap: 4px;
  text-align: center;
  padding: var(--space-sm, 12px);
  background: var(--bg-secondary, #141414);
  border-radius: 8px;
}

.sessionStatLabel {
  font-size: 10px;
  font-weight: 500;
  color: var(--text-tertiary, #666666);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.sessionStatValue {
  font-size: 15px;
  font-weight: 600;
  color: var(--text-primary, #ffffff);
}

/* ==========================================================================
   Dyno Log Tab
   ========================================================================== */

.dynoList {
  display: flex;
  flex-direction: column;
  gap: var(--space-md, 16px);
}

.dynoCard {
  background: var(--bg-card, #161616);
  border: 1px solid var(--border-subtle, #1a1a1a);
  border-radius: 14px;
  padding: var(--space-md, 16px);
}

.dynoHeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-md, 16px);
}

.dynoShop {
  font-size: 16px;
  font-weight: 600;
  color: var(--text-primary, #ffffff);
}

.dynoDate {
  font-size: 13px;
  color: var(--text-tertiary, #666666);
}

.dynoStats {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--space-sm, 12px);
  margin-bottom: var(--space-sm, 12px);
}

.dynoStat {
  display: flex;
  flex-direction: column;
  gap: 4px;
  padding: var(--space-sm, 12px);
  background: var(--bg-secondary, #141414);
  border-radius: 8px;
}

.dynoStatLabel {
  font-size: 10px;
  font-weight: 500;
  color: var(--text-tertiary, #666666);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.dynoStatValue {
  font-size: 22px;
  font-weight: 700;
  color: var(--text-primary, #ffffff);
  font-family: var(--font-display);
}

.dynoNotes {
  font-size: 13px;
  color: var(--text-secondary, #a0a0a0);
  margin: var(--space-sm, 12px) 0 0;
  line-height: 1.5;
}

/* ==========================================================================
   Empty State
   ========================================================================== */

.emptyState {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--space-3xl, 64px) var(--space-lg, 24px);
  text-align: center;
}

.emptyIcon {
  margin-bottom: var(--space-lg, 24px);
  color: var(--text-tertiary, #666666);
}

.emptyState h3 {
  font-size: 20px;
  font-weight: 600;
  color: var(--text-primary, #ffffff);
  margin: 0 0 var(--space-sm, 12px);
}

.emptyState p {
  font-size: 15px;
  color: var(--text-secondary, #a0a0a0);
  margin: 0 0 var(--space-lg, 24px);
  max-width: 280px;
}

.emptyAction {
  padding: 14px 28px;
  background: var(--accent-primary, #ff4d00);
  border: none;
  border-radius: 10px;
  color: var(--brand-text-primary);
  font-size: 15px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.15s ease;
}

.emptyAction:hover {
  background: var(--accent-primary-light, #ff6620);
}

/* ==========================================================================
   Quick Stats Bar
   ========================================================================== */

.quickStats {
  position: fixed;
  bottom: calc(80px + env(safe-area-inset-bottom, 20px));
  left: var(--space-lg, 24px);
  right: var(--space-lg, 24px);
  display: flex;
  justify-content: space-around;
  padding: var(--space-md, 16px);
  background: var(--bg-card, #161616);
  border: 1px solid var(--border-subtle, #1a1a1a);
  border-radius: 14px;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.quickStat {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2px;
}

.quickStatValue {
  font-size: 20px;
  font-weight: 700;
  color: var(--text-primary, #ffffff);
  font-family: var(--font-display);
}

.quickStatLabel {
  font-size: 11px;
  font-weight: 500;
  color: var(--text-tertiary, #666666);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

/* ==========================================================================
   Responsive
   ========================================================================== */

@media (min-width: 768px) {
  .estimatesList,
  .sessionsList,
  .dynoList {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
  }
  
  .quickStats {
    max-width: 400px;
    left: 50%;
    right: auto;
    transform: translateX(-50%);
  }
}

@media (min-width: 1024px) {
  .content {
    max-width: 900px;
    margin: 0 auto;
  }
  
  .header {
    max-width: 900px;
    margin: 0 auto;
  }
  
  .tabNav {
    max-width: 900px;
    margin: 0 auto var(--space-lg, 24px);
  }
}
