/* ==========================================================================
   COMMUNITY FEED - TikTok/Reels Style
   Clean, immersive, content-first design
   ========================================================================== */

.container {
  position: fixed;
  inset: 0;
  background: var(--color-bg-base);
  overflow: hidden;
}

/* ==========================================================================
   TAB BAR
   ========================================================================== */

.tabBar {
  position: absolute;
  top: calc(env(safe-area-inset-top, 0px) + 12px);
  left: 50%;
  transform: translateX(-50%);
  z-index: 100;
  display: flex;
  gap: 8px;
  padding: 4px;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 20px;
}

.tab {
  padding: 8px 24px;
  font-size: 0.875rem;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.6);
  background: transparent;
  border: none;
  border-radius: 16px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.tab.tabActive {
  color: var(--brand-bg-primary);
  background: var(--brand-text-primary);
}

/* ==========================================================================
   STATES
   ========================================================================== */

.centerState,
.emptyState {
  position: absolute;
  inset: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 20px;
  color: rgba(255, 255, 255, 0.6);
}

.spinner {
  animation: spin 1s linear infinite;
  color: var(--brand-text-primary);
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.primaryBtn {
  padding: 14px 32px;
  background: var(--brand-text-primary);
  color: var(--brand-bg-primary);
  font-weight: 600;
  font-size: 0.9375rem;
  border-radius: 24px;
  text-decoration: none;
  border: none;
}

/* ==========================================================================
   FULL-SCREEN IMAGE
   ========================================================================== */

.imageContainer {
  position: absolute;
  inset: 0;
  overflow: hidden;
}

.imageTrack {
  display: flex;
  height: 100%;
  transition: transform 0.3s cubic-bezier(0.25, 0.1, 0.25, 1);
}

.imageSlide {
  flex: 0 0 100%;
  position: relative;
  height: 100%;
}

.image {
  object-fit: cover;
  object-position: center;
}

/* Gradients */
.gradientTop {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 200px;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.6) 0%, transparent 100%);
  pointer-events: none;
}

.gradientBottom {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.85) 0%, rgba(0, 0, 0, 0.4) 40%, transparent 100%);
  pointer-events: none;
}

/* Image Dots */
.dots {
  position: absolute;
  top: calc(env(safe-area-inset-top, 0px) + 60px);
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 4px;
  z-index: 50;
}

.dot {
  width: 6px;
  height: 6px;
  background: rgba(255, 255, 255, 0.4);
  border-radius: 3px;
  transition: all 0.2s ease;
}

.dot.dotActive {
  width: 16px;
  background: var(--brand-text-primary);
}

/* ==========================================================================
   RIGHT SIDE ACTIONS
   ========================================================================== */

.actions {
  position: absolute;
  right: 12px;
  bottom: calc(env(safe-area-inset-bottom, 0px) + 140px);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20px;
  z-index: 50;
}

.actionBtn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
  background: none;
  border: none;
  padding: 0;
  cursor: pointer;
  color: var(--brand-text-primary);
}

.actionBtn svg {
  filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.5));
  transition: transform 0.15s ease;
}

.actionBtn:active svg {
  transform: scale(0.9);
}

.actionBtn span {
  font-size: 0.6875rem;
  font-weight: 600;
  text-shadow: 0 1px 4px rgba(0, 0, 0, 0.5);
}

.actionBtn.liked {
  color: var(--color-error);
}

.actionBtn.liked svg {
  animation: heartPop 0.35s ease;
}

@keyframes heartPop {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.25); }
}

.actionBtn.copied {
  color: var(--color-accent-teal);
}

/* ==========================================================================
   BOTTOM INFO
   ========================================================================== */

.info {
  position: absolute;
  left: 16px;
  right: 70px;
  bottom: calc(env(safe-area-inset-bottom, 0px) + 90px);
  z-index: 50;
  cursor: pointer;
}

.userRow {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 8px;
}

.avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--brand-purple-accent) 0%, var(--brand-purple-accent) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 0.8125rem;
  font-weight: 700;
  color: var(--brand-text-primary);
  overflow: hidden;
  border: 1.5px solid rgba(255, 255, 255, 0.3);
}

.avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.username {
  font-size: 0.9375rem;
  font-weight: 700;
  color: var(--brand-text-primary);
  text-shadow: 0 1px 4px rgba(0, 0, 0, 0.5);
}

.badge {
  padding: 2px 6px;
  background: rgba(255, 255, 255, 0.2);
  font-size: 0.5625rem;
  font-weight: 700;
  color: var(--brand-text-primary);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  border-radius: 4px;
}

.title {
  font-size: 1rem;
  font-weight: 600;
  color: var(--brand-text-primary);
  margin: 0 0 6px;
  line-height: 1.3;
  text-shadow: 0 1px 4px rgba(0, 0, 0, 0.5);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.meta {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  align-items: center;
  margin-bottom: 8px;
}

.carName {
  font-size: 0.8125rem;
  color: rgba(255, 255, 255, 0.7);
  text-shadow: 0 1px 4px rgba(0, 0, 0, 0.5);
}

.stat {
  font-size: 0.75rem;
  font-weight: 600;
  color: var(--brand-text-primary);
  padding: 3px 8px;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 4px;
}

.seeMore {
  display: inline-flex;
  align-items: center;
  gap: 4px;
  font-size: 0.8125rem;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.6);
  padding: 6px 0;
}

.seeMore svg {
  opacity: 0.6;
}

/* ==========================================================================
   DETAILS SHEET
   ========================================================================== */

.backdrop {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 200;
  animation: fadeIn 0.2s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.sheet {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  max-height: 80vh;
  background: var(--color-bg-elevated);
  border-radius: 16px 16px 0 0;
  z-index: 201;
  animation: slideUp 0.3s cubic-bezier(0.25, 0.1, 0.25, 1);
  display: flex;
  flex-direction: column;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.sheetHandle {
  width: 36px;
  height: 4px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 2px;
  margin: 8px auto;
}

.closeBtn {
  position: absolute;
  top: 12px;
  right: 12px;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.1);
  border: none;
  border-radius: 50%;
  color: rgba(255, 255, 255, 0.7);
  cursor: pointer;
}

.sheetContent {
  flex: 1;
  overflow-y: auto;
  padding: 8px 20px calc(env(safe-area-inset-bottom, 16px) + 20px);
  -webkit-overflow-scrolling: touch;
}

/* Sheet Header */
.sheetHeader {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 16px;
}

.sheetAvatar {
  width: 44px;
  height: 44px;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--brand-purple-accent) 0%, var(--brand-purple-accent) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.125rem;
  font-weight: 700;
  color: var(--brand-text-primary);
  overflow: hidden;
}

.sheetAvatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.sheetUsername {
  font-size: 1rem;
  font-weight: 700;
  color: var(--brand-text-primary);
}

.sheetCar {
  font-size: 0.8125rem;
  color: rgba(255, 255, 255, 0.5);
}

.sheetTitle {
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--brand-text-primary);
  margin: 0 0 12px;
  line-height: 1.3;
}

.sheetDesc {
  font-size: 0.9375rem;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.5;
  margin: 0 0 20px;
}

/* Performance Box */
.perfBox {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 20px;
}

.perfRow {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 0;
}

.perfRow:not(:last-child) {
  border-bottom: 1px solid rgba(255, 255, 255, 0.08);
}

.perfLabel {
  font-size: 0.875rem;
  color: rgba(255, 255, 255, 0.5);
}

.perfValue {
  font-size: 1rem;
  font-weight: 600;
  color: var(--brand-text-primary);
}

.perfStock {
  color: rgba(255, 255, 255, 0.4);
  margin-right: 4px;
}

.perfGain {
  color: var(--color-accent-teal);
  margin-left: 4px;
}

/* Mods Section */
.modsSection {
  margin-bottom: 20px;
}

.sectionLabel {
  font-size: 0.75rem;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.4);
  text-transform: uppercase;
  letter-spacing: 0.08em;
  margin-bottom: 12px;
}

.modsList {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.modChip {
  padding: 8px 14px;
  background: rgba(255, 255, 255, 0.08);
  color: rgba(255, 255, 255, 0.85);
  font-size: 0.8125rem;
  font-weight: 500;
  border-radius: 8px;
}

/* Photos Section */
.photosSection {
  margin-bottom: 24px;
}

.photoGrid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 6px;
}

.photoThumb {
  position: relative;
  aspect-ratio: 1;
  border-radius: 8px;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.05);
  border: 2px solid transparent;
  padding: 0;
  cursor: pointer;
}

.photoThumb img {
  object-fit: cover;
}

.photoThumb.photoActive {
  border-color: var(--brand-text-primary);
}

/* View Button */
.viewBtn {
  display: block;
  width: 100%;
  padding: 16px;
  background: var(--brand-text-primary);
  color: var(--brand-bg-primary);
  font-size: 1rem;
  font-weight: 700;
  text-align: center;
  text-decoration: none;
  border-radius: 12px;
}

/* ==========================================================================
   RESPONSIVE
   ========================================================================== */

@media (min-width: 768px) {
  .tab {
    padding: 10px 32px;
    font-size: 0.9375rem;
  }
  
  .info {
    left: 24px;
    right: 100px;
    bottom: 100px;
  }
  
  .title {
    font-size: 1.25rem;
  }
  
  .actions {
    right: 24px;
    bottom: 150px;
    gap: 24px;
  }
  
  .actionBtn svg {
    width: 32px;
    height: 32px;
  }
  
  .sheet {
    max-width: 480px;
    left: 50%;
    transform: translateX(-50%);
  }
  
  @keyframes slideUp {
    from { transform: translateX(-50%) translateY(100%); }
    to { transform: translateX(-50%) translateY(0); }
  }
}
