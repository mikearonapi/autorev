/* ==========================================================================
   PREMIUM BUILD DETAIL SHEET
   Rich, immersive detail view for community builds
   ========================================================================== */

/* Backdrop */
.backdrop {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 200;
  animation: fadeIn 0.2s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* Sheet */
.sheet {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  max-height: 85vh;
  background: linear-gradient(180deg, var(--brand-bg-card-dark) 0%, var(--brand-bg-primary-dark) 100%);
  border-radius: 20px 20px 0 0;
  z-index: 201;
  animation: slideUp 0.3s cubic-bezier(0.25, 0.1, 0.25, 1);
  display: flex;
  flex-direction: column;
  border-top: 1px solid rgba(255, 255, 255, 0.08);
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.sheetHandle {
  width: 40px;
  height: 4px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 2px;
  margin: 10px auto;
  flex-shrink: 0;
}

.closeBtn {
  position: absolute;
  top: 14px;
  right: 14px;
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.08);
  border: none;
  border-radius: 50%;
  color: rgba(255, 255, 255, 0.6);
  cursor: pointer;
  transition: all 0.2s ease;
}

.closeBtn:hover {
  background: rgba(255, 255, 255, 0.12);
  color: var(--brand-text-primary);
}

/* Content */
.sheetContent {
  flex: 1;
  overflow-y: auto;
  padding: 8px 20px calc(env(safe-area-inset-bottom, 20px) + 20px);
  -webkit-overflow-scrolling: touch;
}

/* Header */
.sheetHeader {
  display: flex;
  align-items: center;
  gap: 14px;
  margin-bottom: 18px;
}

.sheetAvatar {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--brand-purple-accent) 0%, var(--brand-purple-accent) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--brand-text-primary);
  overflow: hidden;
  flex-shrink: 0;
}

.sheetAvatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.sheetUsername {
  font-size: 1.0625rem;
  font-weight: 700;
  color: var(--brand-text-primary);
  line-height: 1.3;
}

.sheetCar {
  font-size: 0.8125rem;
  color: rgba(255, 255, 255, 0.5);
  margin-top: 2px;
}

.sheetTitle {
  font-size: 1.375rem;
  font-weight: 700;
  color: var(--brand-text-primary);
  margin: 0 0 10px;
  line-height: 1.25;
}

.sheetDesc {
  font-size: 0.9375rem;
  color: rgba(255, 255, 255, 0.65);
  line-height: 1.55;
  margin: 0 0 24px;
}

/* ==========================================================================
   SECTIONS
   ========================================================================== */

.section {
  background: rgba(255, 255, 255, 0.02);
  border: 1px solid rgba(255, 255, 255, 0.06);
  border-radius: 14px;
  padding: 18px;
  margin-bottom: 16px;
}

.sectionHeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.sectionTitle {
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 0.9375rem;
  font-weight: 600;
  color: var(--brand-text-primary);
  margin: 0;
}

.sectionTitle svg {
  color: var(--color-accent-gold);
}

.sectionTitleSimple {
  font-size: 0.8125rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  color: rgba(255, 255, 255, 0.5);
  margin: 0 0 14px;
}

.costBadge {
  padding: 6px 14px;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 20px;
  font-size: 0.8125rem;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.7);
}

.partsCount {
  padding: 4px 10px;
  background: rgba(37, 244, 238, 0.1);
  border-radius: 12px;
  font-size: 0.75rem;
  font-weight: 600;
  color: var(--color-accent-teal);
}

/* ==========================================================================
   PERFORMANCE METRICS
   ========================================================================== */

.metricsGrid {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.metricRow {
  padding: 12px 14px;
  background: rgba(0, 0, 0, 0.25);
  border-radius: 10px;
}

.metricHeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.metricLabel {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 0.6875rem;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.5);
  text-transform: uppercase;
  letter-spacing: 0.04em;
}

.metricLabel svg {
  color: var(--color-accent-gold);
}

.metricValues {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 0.8125rem;
  font-weight: 600;
}

.stockValue {
  color: rgba(255, 255, 255, 0.4);
  font-size: 0.75rem;
}

.metricArrow {
  color: rgba(255, 255, 255, 0.2);
  font-size: 0.625rem;
}

.upgradedValue {
  color: var(--color-accent-teal);
  font-weight: 700;
}

.currentValue {
  color: rgba(255, 255, 255, 0.85);
  font-weight: 600;
}

.metricDelta {
  padding: 2px 8px;
  background: rgba(16, 185, 129, 0.15);
  border-radius: 6px;
  font-size: 0.6875rem;
  font-weight: 700;
  color: var(--color-accent-teal);
}

/* Metric Track (Bar) */
.metricTrack {
  position: relative;
  height: 5px;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 3px;
  overflow: hidden;
}

.metricFillStock {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  background: var(--color-accent-blue);
  border-radius: 3px;
  transition: width 0.5s ease;
}

.metricFillUpgrade {
  position: absolute;
  top: 0;
  height: 100%;
  background: linear-gradient(90deg, var(--color-accent-teal), var(--color-accent-teal-light));
  border-radius: 3px;
  transition: all 0.5s ease;
}

/* ==========================================================================
   EXPERIENCE SCORES
   ========================================================================== */

.scoreRow {
  padding: 12px 14px;
  background: rgba(0, 0, 0, 0.25);
  border-radius: 10px;
  margin-bottom: 10px;
}

.scoreRow:last-child {
  margin-bottom: 0;
}

.scoreHeader {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10px;
}

.scoreLabel {
  font-size: 0.8125rem;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.7);
}

.scoreValues {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 0.875rem;
}

.stockVal {
  color: rgba(255, 255, 255, 0.4);
  font-size: 0.75rem;
}

.arrow {
  color: rgba(255, 255, 255, 0.2);
  font-size: 0.625rem;
}

.upgradedVal {
  color: var(--color-accent-teal);
  font-weight: 700;
}

.currentVal {
  color: rgba(255, 255, 255, 0.85);
  font-weight: 600;
}

/* Score Track */
.track {
  position: relative;
  height: 5px;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 3px;
  overflow: hidden;
}

.fillStock {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  background: var(--color-accent-blue);
  border-radius: 3px;
  transition: width 0.5s ease;
}

.fillUpgrade {
  position: absolute;
  top: 0;
  height: 100%;
  background: linear-gradient(90deg, var(--color-accent-teal), var(--color-accent-teal-light));
  border-radius: 3px;
  transition: all 0.5s ease;
}

/* ==========================================================================
   PARTS SHOPPING LIST
   ========================================================================== */

.copyBtn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  width: 100%;
  padding: 12px;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 10px;
  color: rgba(255, 255, 255, 0.7);
  font-size: 0.875rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
}

.copyBtn:hover {
  background: rgba(255, 255, 255, 0.08);
  color: var(--brand-text-primary);
}

.copyBtn svg {
  opacity: 0.7;
}

/* ==========================================================================
   MODS LIST
   ========================================================================== */

.modsSection {
  margin-bottom: 20px;
}

.sectionLabel {
  font-size: 0.6875rem;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.4);
  text-transform: uppercase;
  letter-spacing: 0.08em;
  margin-bottom: 12px;
}

.modsList {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.modChip {
  padding: 8px 14px;
  background: rgba(255, 255, 255, 0.06);
  color: rgba(255, 255, 255, 0.85);
  font-size: 0.8125rem;
  font-weight: 500;
  border-radius: 8px;
  transition: background 0.2s ease;
}

/* ==========================================================================
   PHOTOS SECTION
   ========================================================================== */

.photosSection {
  margin-bottom: 24px;
}

.photoGrid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 8px;
}

.photoThumb {
  position: relative;
  aspect-ratio: 1;
  border-radius: 10px;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.05);
  border: 2px solid transparent;
  padding: 0;
  cursor: pointer;
  transition: all 0.2s ease;
}

.photoThumb img {
  object-fit: cover;
}

.photoThumb:hover {
  border-color: rgba(255, 255, 255, 0.3);
}

.photoThumb.photoActive {
  border-color: var(--brand-text-primary);
}

/* ==========================================================================
   VIEW BUTTON
   ========================================================================== */

.viewBtn {
  display: block;
  width: 100%;
  padding: 16px;
  background: linear-gradient(135deg, var(--brand-text-primary) 0%, rgba(255, 255, 255, 0.9) 100%);
  color: var(--brand-bg-primary);
  font-size: 1rem;
  font-weight: 700;
  text-align: center;
  text-decoration: none;
  border-radius: 14px;
  transition: all 0.2s ease;
}

.viewBtn:hover {
  transform: translateY(-1px);
  box-shadow: 0 4px 20px rgba(255, 255, 255, 0.15);
}

/* ==========================================================================
   LOADING STATE
   ========================================================================== */

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40px;
  color: rgba(255, 255, 255, 0.5);
}

/* ==========================================================================
   RESPONSIVE
   ========================================================================== */

@media (min-width: 768px) {
  .sheet {
    max-width: 520px;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 20px 20px 0 0;
  }
  
  @keyframes slideUp {
    from { transform: translateX(-50%) translateY(100%); }
    to { transform: translateX(-50%) translateY(0); }
  }
  
  .photoGrid {
    grid-template-columns: repeat(5, 1fr);
  }
}
