/* My Builds Page - GRAVL-Inspired Dark Theme */

.container {
  min-height: 100vh;
  padding: var(--space-lg);
  background: var(--bg-primary, #0a0a0a);
  color: var(--text-primary, #ffffff);
}

@media (min-width: 768px) {
  .container {
    padding: var(--space-xl);
  }
}

@media (min-width: 1024px) {
  .container {
    padding: var(--space-2xl);
    max-width: 1200px;
    margin: 0 auto;
  }
}

/* Header */
.header {
  margin-bottom: var(--space-xl);
}

.headerTop {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: var(--space-md);
  margin-bottom: var(--space-sm);
}

.title {
  font-family: var(--font-display);
  font-size: 28px;
  font-weight: 700;
  margin: 0;
  text-transform: uppercase;
  letter-spacing: 0.02em;
}

@media (min-width: 768px) {
  .title {
    font-size: 36px;
  }
}

.subtitle {
  color: var(--text-secondary, #a0a0a0);
  font-size: 14px;
  margin: 0;
}

.newBuildBtn {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 12px 20px;
  background: linear-gradient(135deg, var(--accent-primary, var(--color-accent-lime)) 0%, var(--color-accent-lime-dark) 100%);
  color: white;
  border: none;
  border-radius: 10px;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.newBuildBtn:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(255, 77, 0, 0.3);
}

/* Tabs - GRAVL-style segmented control */
.tabs {
  display: flex;
  gap: 4px;
  margin-bottom: var(--space-xl);
  padding: 4px;
  background: var(--bg-card, #161616);
  border-radius: 12px;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

.tab {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 12px 16px;
  background: transparent;
  border: none;
  color: var(--text-secondary, #a0a0a0);
  font-size: 13px;
  font-weight: 500;
  cursor: pointer;
  border-radius: 8px;
  transition: all 0.2s ease;
  white-space: nowrap;
  flex: 1;
  min-width: max-content;
}

.tab svg {
  width: 18px;
  height: 18px;
  flex-shrink: 0;
}

.tab:hover {
  color: var(--text-primary, #ffffff);
}

.tabActive {
  background: var(--bg-elevated, #1f1f1f);
  color: var(--text-primary, #ffffff);
}

.tabCount {
  background: var(--bg-secondary, #141414);
  padding: 2px 8px;
  border-radius: 20px;
  font-size: 11px;
  font-weight: 600;
}

.tabActive .tabCount {
  background: var(--accent-primary, var(--color-accent-lime));
  color: white;
}

/* Content */
.content {
  min-height: 400px;
}

/* Build Grid - GRAVL-style cards */
.buildGrid {
  display: grid;
  gap: var(--space-md);
  grid-template-columns: 1fr;
}

@media (min-width: 640px) {
  .buildGrid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (min-width: 1024px) {
  .buildGrid {
    grid-template-columns: repeat(3, 1fr);
  }
}

/* Build Card - GRAVL-inspired */
.buildCard {
  display: flex;
  flex-direction: column;
  background: var(--bg-card, #161616);
  border: 1px solid var(--border-subtle, #1a1a1a);
  border-radius: 16px;
  overflow: hidden;
  cursor: pointer;
  transition: all 0.2s ease;
  text-align: left;
  width: 100%;
}

.buildCard:hover {
  border-color: var(--accent-primary, var(--color-accent-lime));
  transform: translateY(-4px);
  box-shadow: 0 12px 32px rgba(0, 0, 0, 0.3);
}

.buildCardImage {
  position: relative;
  height: 120px;
  background: linear-gradient(135deg, var(--bg-secondary, #141414) 0%, var(--bg-card, #161616) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.buildCardImagePlaceholder {
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--bg-secondary, #141414);
  border-radius: 50%;
  color: var(--text-tertiary, #666666);
}

.buildCardImagePlaceholder svg {
  width: 24px;
  height: 24px;
}

.buildStatus {
  position: absolute;
  top: 12px;
  right: 12px;
  font-size: 11px;
  padding: 4px 10px;
  border-radius: 20px;
  background: rgba(255, 255, 255, 0.1);
  color: var(--text-secondary, #a0a0a0);
  font-weight: 500;
  backdrop-filter: blur(8px);
}

.buildCardContent {
  padding: var(--space-md);
  flex: 1;
}

.buildName {
  font-size: 16px;
  font-weight: 600;
  color: var(--text-primary, #ffffff);
  margin: 0 0 4px;
  line-height: 1.3;
}

.buildCarName {
  font-size: 13px;
  color: var(--text-secondary, #a0a0a0);
  margin: 0;
}

.buildCardStats {
  display: flex;
  align-items: center;
  padding: var(--space-md);
  background: var(--bg-secondary, #141414);
  border-top: 1px solid var(--border-subtle, #1a1a1a);
}

.buildStat {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.buildStat strong {
  font-size: 18px;
  font-weight: 700;
  color: var(--accent-primary, var(--color-accent-lime));
}

.buildStat span {
  font-size: 11px;
  color: var(--text-tertiary, #666666);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.buildStatDivider {
  width: 1px;
  height: 32px;
  background: var(--border-subtle, #1a1a1a);
}

/* Vehicle Grid */
.vehicleGrid {
  display: grid;
  gap: var(--space-md);
  grid-template-columns: 1fr;
}

@media (min-width: 640px) {
  .vehicleGrid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (min-width: 1024px) {
  .vehicleGrid {
    grid-template-columns: repeat(3, 1fr);
  }
}

.vehicleCard {
  background: var(--bg-card, #161616);
  border: 1px solid var(--border-subtle, #1a1a1a);
  border-radius: 16px;
  overflow: hidden;
  text-decoration: none;
  color: inherit;
  transition: all 0.2s ease;
}

.vehicleCard:hover {
  border-color: var(--accent-secondary, var(--color-accent-teal));
  transform: translateY(-4px);
}

.vehicleCardBody {
  padding: var(--space-lg);
}

.vehicleCardBody h3 {
  font-size: 16px;
  font-weight: 600;
  color: var(--text-primary, #ffffff);
  margin: 0;
}

.vehicleNickname {
  font-size: 13px;
  color: var(--text-tertiary, #666666);
  font-style: italic;
  margin-top: var(--space-xs);
}

.vehicleCardFooter {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--space-sm) var(--space-lg);
  background: var(--bg-secondary, #141414);
  border-top: 1px solid var(--border-subtle, #1a1a1a);
  font-size: 13px;
  font-weight: 500;
  color: var(--accent-secondary, var(--color-accent-teal));
}

/* Saved Grid */
.savedGrid {
  display: grid;
  gap: var(--space-md);
  grid-template-columns: 1fr;
}

@media (min-width: 640px) {
  .savedGrid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (min-width: 1024px) {
  .savedGrid {
    grid-template-columns: repeat(3, 1fr);
  }
}

.savedCard {
  background: var(--bg-card, #161616);
  border: 1px solid var(--border-subtle, #1a1a1a);
  border-radius: 16px;
  overflow: hidden;
  text-decoration: none;
  color: inherit;
  transition: all 0.2s ease;
}

.savedCard:hover {
  border-color: var(--sn-gold, var(--color-accent-gold));
  transform: translateY(-4px);
}

.savedCardBody {
  padding: var(--space-lg);
}

.savedCardBody h3 {
  font-size: 16px;
  font-weight: 600;
  color: var(--text-primary, #ffffff);
  margin: 0;
}

.savedCardFooter {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--space-sm) var(--space-lg);
  background: var(--bg-secondary, #141414);
  border-top: 1px solid var(--border-subtle, #1a1a1a);
  font-size: 13px;
  font-weight: 500;
  color: var(--sn-gold, var(--color-accent-gold));
}

/* Empty States - GRAVL-inspired */
.emptyState {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: var(--space-3xl) var(--space-xl);
  min-height: 60vh;
}

.emptyState svg {
  width: 64px;
  height: 64px;
  color: var(--text-tertiary, #666666);
  margin-bottom: var(--space-lg);
}

.emptyState h2 {
  font-family: var(--font-display);
  font-size: 24px;
  font-weight: 600;
  margin: 0 0 var(--space-sm);
}

.emptyState p {
  color: var(--text-secondary, #a0a0a0);
  margin: 0 0 var(--space-lg);
  max-width: 300px;
}

.emptyTabState {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: var(--space-3xl) var(--space-xl);
  background: var(--bg-card, #161616);
  border-radius: 20px;
  border: 2px dashed var(--border-default, #252525);
}

.emptyIcon {
  width: 72px;
  height: 72px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--bg-secondary, #141414);
  border-radius: 50%;
  margin-bottom: var(--space-lg);
}

.emptyIcon svg,
.emptyTabState svg {
  width: 32px;
  height: 32px;
  color: var(--text-tertiary, #666666);
}

.emptyTabState h3 {
  font-family: var(--font-display);
  font-size: 20px;
  font-weight: 600;
  margin: 0 0 var(--space-sm);
}

.emptyTabState p {
  color: var(--text-secondary, #a0a0a0);
  margin: 0 0 var(--space-lg);
  font-size: 14px;
  max-width: 280px;
}

/* Buttons */
.signInBtn {
  background: linear-gradient(135deg, var(--accent-primary, var(--color-accent-lime)) 0%, var(--color-accent-lime-dark) 100%);
  color: white;
  padding: 14px 28px;
  border-radius: 12px;
  font-size: 16px;
  font-weight: 600;
  border: none;
  cursor: pointer;
  transition: all 0.2s ease;
}

.signInBtn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(255, 77, 0, 0.3);
}

.primaryBtn {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  background: linear-gradient(135deg, var(--accent-primary, var(--color-accent-lime)) 0%, var(--color-accent-lime-dark) 100%);
  color: white;
  padding: 14px 24px;
  border-radius: 12px;
  font-size: 15px;
  font-weight: 600;
  text-decoration: none;
  border: none;
  cursor: pointer;
  transition: all 0.2s ease;
}

.primaryBtn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(255, 77, 0, 0.3);
}

.secondaryBtn {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  background: transparent;
  color: var(--text-primary, #ffffff);
  padding: 14px 24px;
  border-radius: 12px;
  border: 1px solid var(--border-default, #252525);
  font-size: 15px;
  font-weight: 500;
  text-decoration: none;
  transition: all 0.2s ease;
}

.secondaryBtn:hover {
  background: var(--bg-card, #161616);
  border-color: var(--border-hover, #333333);
}

.exploreLink {
  margin-top: var(--space-md);
  color: var(--text-secondary, #a0a0a0);
  font-size: 14px;
}

.exploreLink:hover {
  color: var(--accent-primary, var(--color-accent-lime));
}

.backBtn {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  background: transparent;
  color: var(--text-secondary, #a0a0a0);
  padding: var(--space-sm) 0;
  border: none;
  font-size: 14px;
  cursor: pointer;
  margin-bottom: var(--space-lg);
}

.backBtn:hover {
  color: var(--text-primary, #ffffff);
}

/* Loading State */
.loadingState {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  gap: var(--space-md);
}

.loadingState p {
  color: var(--text-secondary, #a0a0a0);
}

/* Build Detail Content (inside SlideUpPanel) */
.buildDetailContent {
  display: flex;
  flex-direction: column;
  gap: var(--space-xl);
}

.buildDetailHeader h2 {
  font-family: var(--font-display);
  font-size: 24px;
  font-weight: 700;
  margin: 0 0 var(--space-xs);
}

.buildDetailCar {
  color: var(--text-secondary, #a0a0a0);
  font-size: 14px;
  margin: 0;
}

.buildDetailStats {
  display: flex;
  justify-content: space-around;
  padding: var(--space-lg);
  background: var(--bg-card, #161616);
  border-radius: 16px;
}

.buildDetailStat {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
}

.buildDetailStat .statValue {
  font-size: 28px;
  font-weight: 700;
  color: var(--accent-primary, var(--color-accent-lime));
}

.buildDetailStat .statLabel {
  font-size: 12px;
  color: var(--text-tertiary, #666666);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.buildDetailActions {
  display: flex;
  flex-direction: column;
  gap: var(--space-sm);
}

.editBuildBtn {
  width: 100%;
  padding: 16px 24px;
  background: linear-gradient(135deg, var(--accent-primary, var(--color-accent-lime)) 0%, var(--color-accent-lime-dark) 100%);
  color: white;
  border: none;
  border-radius: 12px;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.editBuildBtn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(255, 77, 0, 0.3);
}

.deleteBuildBtn {
  width: 100%;
  padding: 16px 24px;
  background: transparent;
  color: var(--brand-error);
  border: 1px solid rgba(239, 68, 68, 0.3);
  border-radius: 12px;
  font-size: 16px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
}

.deleteBuildBtn:hover {
  background: rgba(239, 68, 68, 0.1);
  border-color: rgba(239, 68, 68, 0.5);
}
